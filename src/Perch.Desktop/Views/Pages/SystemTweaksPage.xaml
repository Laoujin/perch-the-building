<Page
    x:Class="Perch.Desktop.Views.Pages.SystemTweaksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:Perch.Desktop.ViewModels"
    xmlns:models="clr-namespace:Perch.Desktop.Models"
    xmlns:controls="clr-namespace:Perch.Desktop.Views.Controls"
    d:DataContext="{d:DesignInstance vm:SystemTweaksViewModel}"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Foreground="White"
    Loaded="OnLoaded">

    <Grid Margin="24,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:TextBlock Grid.Column="0" FontTypography="Title" Text="Windows Tweaks" />

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ui:TextBox
                    PlaceholderText="Search tweaks..."
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    Width="200"
                    Margin="0,0,8,0" />
                <ui:Button
                    Icon="{ui:SymbolIcon ArrowClockwise24}"
                    Command="{Binding RefreshCommand}" />
            </StackPanel>
        </Grid>

        <!-- Loading -->
        <ui:ProgressRing
            Grid.Row="1"
            IsIndeterminate="True"
            Width="32"
            Height="32"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <!-- Error banner -->
        <ScrollViewer
            Grid.Row="1"
            Panel.ZIndex="10"
            Margin="0,16,0,0"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled"
            Visibility="{Binding ErrorMessage, Converter={StaticResource CountToVisibilityConverter}}">
            <Border
                Background="#331111"
                CornerRadius="12"
                Padding="24">
                <StackPanel HorizontalAlignment="Center" MaxWidth="500">
                    <Image Source="/Assets/wizard-error.png" Width="640" Height="640" Margin="0,0,0,16"
                           Stretch="Uniform" HorizontalAlignment="Center" />
                    <TextBlock Text="Failed to load tweaks" FontSize="16" FontWeight="SemiBold"
                               Foreground="#EF4444" HorizontalAlignment="Center" Margin="0,0,0,8" />
                    <TextBox Text="{Binding ErrorMessage, Mode=OneWay}" IsReadOnly="True"
                             Foreground="#DC2626" FontSize="12" Background="Transparent" BorderThickness="0"
                             TextWrapping="Wrap" Margin="0" Focusable="True" IsHitTestVisible="True"
                             VerticalScrollBarVisibility="Hidden" HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Category grid (visible when no category selected) -->
        <ScrollViewer
            Grid.Row="1"
            Margin="0,16,0,0"
            VerticalScrollBarVisibility="Auto"
            Visibility="{Binding ShowCategories, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding Categories}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:TweakCategoryCardModel}">
                        <Border
                            Background="#1A1A2E"
                            BorderBrush="#333350"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Width="200"
                            Margin="0,0,12,12"
                            Cursor="Hand"
                            MouseLeftButtonUp="OnCategoryCardClick">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <ui:SymbolIcon
                                    Grid.Row="0"
                                    Symbol="{Binding IconSymbol}"
                                    FontSize="28"
                                    Foreground="#10B981"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,8" />

                                <TextBlock
                                    Grid.Row="1"
                                    Text="{Binding DisplayName}"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="White" />

                                <TextBlock
                                    Grid.Row="2"
                                    FontSize="11"
                                    Foreground="#888888"
                                    Margin="0,4,0,0">
                                    <Run Text="{Binding ItemCount, Mode=OneWay}" />
                                    <Run Text=" items" />
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Detail view (visible when a category is selected) -->
        <Grid
            Grid.Row="1"
            Margin="0,16,0,0"
            Visibility="{Binding ShowDetail, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Back button + category header -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ui:Button
                    Grid.Column="0"
                    Icon="{ui:SymbolIcon ArrowLeft24}"
                    x:Name="BackButton"
                    Margin="0,0,12,0" />
                <TextBlock
                    Grid.Column="1"
                    x:Name="DetailHeaderText"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White"
                    VerticalAlignment="Center" />
            </Grid>

            <!-- System Tweaks: sub-category grid with profile filter chips -->
            <Grid Grid.Row="1" x:Name="SubCategoryPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Profile filter chips -->
                <ItemsControl Grid.Row="0" ItemsSource="{Binding AvailableProfileFilters}" Margin="0,0,0,12">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:Button
                                Content="{Binding}"
                                Margin="0,0,8,4"
                                Padding="8,4"
                                FontSize="11"
                                Click="OnProfileFilterClick" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Sub-category grid -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding SubCategories}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:TweakCategoryCardModel}">
                                <Border
                                    Background="#1A1A2E"
                                    BorderBrush="#333350"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Width="200"
                                    Margin="0,0,12,12"
                                    Cursor="Hand"
                                    MouseLeftButtonUp="OnSubCategoryCardClick">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <ui:SymbolIcon
                                            Grid.Row="0"
                                            Symbol="{Binding IconSymbol}"
                                            FontSize="28"
                                            Foreground="#10B981"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,0,8" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Text="{Binding DisplayName}"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="White" />

                                        <TextBlock
                                            Grid.Row="2"
                                            FontSize="11"
                                            Foreground="#888888"
                                            Margin="0,4,0,0">
                                            <Run Text="{Binding ItemCount, Mode=OneWay}" />
                                            <Run Text=" items" />
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Tweak cards for selected sub-category -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                          x:Name="TweakDetailPanel" Visibility="Collapsed">
                <ItemsControl ItemsSource="{Binding FilteredTweaks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate><WrapPanel /></ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:TweakCardModel}">
                            <Border
                                Background="#1A1A2E"
                                BorderBrush="{Binding IsSelected, Converter={StaticResource BooleanToBorderBrushConverter}}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="12"
                                Width="280"
                                Margin="0,0,12,12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Row 0: Badges + Toggle top-right -->
                                    <Grid Grid.Row="0" Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                            <controls:StatusRibbon Status="{Binding Status}" />
                                            <Border
                                                Background="Transparent"
                                                BorderBrush="#10B981"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="6,1"
                                                Margin="6,0,0,0"
                                                Visibility="{Binding IsSuggested, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TextBlock Text="Suggested" FontSize="10" Foreground="#10B981" />
                                            </Border>
                                        </StackPanel>

                                        <ui:ToggleSwitch
                                            Grid.Column="1"
                                            IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                            VerticalAlignment="Center" />
                                    </Grid>

                                    <!-- Row 1: Name + restart icon -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                                        <TextBlock
                                            Text="{Binding Name}"
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            TextTrimming="CharacterEllipsis"
                                            MaxWidth="230" />
                                        <ui:SymbolIcon
                                            Symbol="ArrowSync24"
                                            FontSize="14"
                                            Foreground="#888888"
                                            ToolTip="Requires restart"
                                            Margin="6,0,0,0"
                                            Visibility="{Binding RestartRequired, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </StackPanel>

                                    <!-- Row 2: Description -->
                                    <TextBlock
                                        Grid.Row="2"
                                        Text="{Binding Description}"
                                        FontSize="11"
                                        Foreground="#888888"
                                        TextWrapping="Wrap"
                                        MaxHeight="32"
                                        Margin="0,4,0,0" />

                                    <!-- Row 3: Expandable registry keys button -->
                                    <ui:Button
                                        Grid.Row="3"
                                        Padding="4,2"
                                        Margin="0,6,0,0"
                                        HorizontalAlignment="Left"
                                        Click="OnTweakExpandClick">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Text="{Binding RegistryKeyCountText}"
                                                FontSize="10"
                                                Foreground="#666666" />
                                            <TextBlock
                                                Text="{Binding IsExpanded, Converter={StaticResource BooleanToChevronConverter}}"
                                                FontSize="10"
                                                Foreground="#666666"
                                                Margin="4,0,0,0" />
                                        </StackPanel>
                                    </ui:Button>

                                    <!-- Row 4: Expanded registry detail + actions -->
                                    <StackPanel
                                        Grid.Row="4"
                                        Margin="0,8,0,0"
                                        Visibility="{Binding IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Border
                                            Background="#12122A"
                                            CornerRadius="6"
                                            Padding="10">
                                            <ItemsControl ItemsSource="{Binding DetectedEntries}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Margin="0,0,0,8">
                                                            <TextBlock
                                                                Text="{Binding Definition.Key}"
                                                                FontSize="10"
                                                                FontFamily="Cascadia Code,Consolas,Courier New"
                                                                Foreground="#888888"
                                                                TextTrimming="CharacterEllipsis"
                                                                ToolTip="{Binding Definition.Key}" />
                                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                                <TextBlock
                                                                    Text="{Binding Definition.Name}"
                                                                    FontSize="11"
                                                                    FontWeight="SemiBold"
                                                                    Foreground="White" />
                                                                <TextBlock
                                                                    FontSize="11"
                                                                    Foreground="#666666"
                                                                    Margin="4,0,0,0">
                                                                    <Run Text="(" /><Run Text="{Binding Definition.Kind, Mode=OneWay}" /><Run Text=")" />
                                                                </TextBlock>
                                                            </StackPanel>
                                                            <!-- Three-value table: Current / Desired / Default -->
                                                            <Grid Margin="0,4,0,0">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="*" />
                                                                </Grid.ColumnDefinitions>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto" />
                                                                    <RowDefinition Height="Auto" />
                                                                </Grid.RowDefinitions>
                                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Current" FontSize="9" Foreground="#666666" />
                                                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Desired" FontSize="9" Foreground="#666666" />
                                                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Default" FontSize="9" Foreground="#666666" />
                                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding CurrentValue}" FontSize="10"
                                                                           Foreground="{Binding IsApplied, Converter={StaticResource BooleanToForegroundConverter}}" />
                                                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Definition.Value}" FontSize="10" Foreground="#10B981" />
                                                                <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Definition.DefaultValue}" FontSize="10" Foreground="#888888" />
                                                            </Grid>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Border>
                                        <!-- Action buttons -->
                                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                            <ui:Button
                                                Content="Apply"
                                                Padding="8,4"
                                                FontSize="11"
                                                Margin="0,0,6,0"
                                                Visibility="{Binding IsAllApplied, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                                Click="OnApplyTweakClick" />
                                            <ui:Button
                                                Content="Revert"
                                                Padding="8,4"
                                                FontSize="11"
                                                Margin="0,0,6,0"
                                                Visibility="{Binding Reversible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                Click="OnRevertTweakClick" />
                                            <ui:Button
                                                Icon="{ui:SymbolIcon FolderOpen16}"
                                                ToolTip="Open in Regedit"
                                                Padding="4,4"
                                                FontSize="11"
                                                Click="OnOpenRegeditClick" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Startup items for Startup category -->
            <Grid Grid.Row="1" x:Name="StartupDetailPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                    <ui:TextBox
                        PlaceholderText="Search startup items..."
                        Text="{Binding StartupSearchText, UpdateSourceTrigger=PropertyChanged}"
                        Width="250" />
                    <ui:Button
                        Content="Track all new"
                        Padding="8,4"
                        FontSize="11"
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        Command="{Binding TrackAllNewStartupItemsCommand}" />
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock
                            x:Name="StartupEmptyState"
                            Text="No startup items found"
                            FontSize="12"
                            Foreground="#666666"
                            Margin="0,0,0,12"
                            Visibility="Collapsed" />

                        <ItemsControl ItemsSource="{Binding FilteredStartupItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:StartupCardModel}">
                                    <Border
                                        Background="#1A1A2E"
                                        BorderBrush="#333350"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="12"
                                        Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <ui:SymbolIcon
                                                        Symbol="Circle24"
                                                        FontSize="10"
                                                        Foreground="{Binding IsEnabled, Converter={StaticResource BooleanToForegroundConverter}}"
                                                        ToolTip="{Binding IsEnabled}"
                                                        Margin="0,0,6,0" />
                                                    <TextBlock
                                                        Text="{Binding Name}"
                                                        FontSize="13"
                                                        FontWeight="SemiBold"
                                                        Foreground="White"
                                                        TextTrimming="CharacterEllipsis"
                                                        ToolTip="{Binding Name}" />
                                                </StackPanel>

                                                <ui:ToggleSwitch
                                                    Grid.Column="1"
                                                    IsChecked="{Binding IsTracked, Mode=TwoWay}"
                                                    ToolTip="Track with Perch"
                                                    VerticalAlignment="Center" />
                                            </Grid>

                                            <TextBox
                                                Grid.Row="1"
                                                Text="{Binding Command, Mode=OneWay}"
                                                IsReadOnly="True"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                FontFamily="Cascadia Code,Consolas,Courier New"
                                                FontSize="11"
                                                Foreground="#888888"
                                                Margin="0,4,0,0"
                                                Padding="0" />

                                            <Grid Grid.Row="2" Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <ui:Button
                                                    Grid.Column="0"
                                                    Content="{Binding SourceLabel}"
                                                    Command="{Binding OpenSourceCommand}"
                                                    ToolTip="Open source location"
                                                    Padding="6,2"
                                                    FontSize="10"
                                                    VerticalAlignment="Center"
                                                    Cursor="Hand" />

                                                <ui:Button
                                                    Grid.Column="2"
                                                    Icon="{ui:SymbolIcon Power24}"
                                                    ToolTip="Toggle enabled/disabled"
                                                    Padding="4"
                                                    Height="26"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,4,0"
                                                    Click="OnStartupToggleEnabledClick" />

                                                <ui:Button
                                                    Grid.Column="3"
                                                    Icon="{ui:SymbolIcon Delete24}"
                                                    ToolTip="Remove from startup"
                                                    Padding="4"
                                                    Height="26"
                                                    VerticalAlignment="Center"
                                                    Click="OnStartupRemoveClick" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- Certificate cards for Certificates category -->
            <Grid Grid.Row="1" x:Name="CertificateDetailPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <ui:TextBox
                    Grid.Row="0"
                    PlaceholderText="Filter certificates..."
                    Text="{Binding CertificateSearchText, UpdateSourceTrigger=PropertyChanged}"
                    Width="250"
                    Margin="0,0,0,8" />

                <ItemsControl Grid.Row="1" ItemsSource="{Binding AvailableCertificateExpiryFilters}" Margin="0,0,0,12">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:Button
                                Content="{Binding}"
                                Margin="0,0,8,4"
                                Padding="8,4"
                                FontSize="11"
                                Click="OnCertificateExpiryFilterClick" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding FilteredCertificateGroups}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:CertificateStoreGroupModel}">
                                <Border
                                    Background="#1A1A2E"
                                    BorderBrush="#333350"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="12"
                                    Margin="0,0,0,8">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <ui:Button
                                                Grid.Column="0"
                                                Content="{Binding IsExpanded, Converter={StaticResource BooleanToChevronConverter}}"
                                                Padding="2"
                                                Height="22"
                                                Width="22"
                                                Margin="0,0,8,0"
                                                VerticalAlignment="Center"
                                                Click="OnCertificateGroupExpandClick" />

                                            <TextBlock
                                                Grid.Column="1"
                                                Text="{Binding DisplayName}"
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                VerticalAlignment="Center" />

                                            <TextBlock
                                                Grid.Column="2"
                                                FontSize="11"
                                                Foreground="#666666"
                                                VerticalAlignment="Center">
                                                <Run Text="{Binding Certificates.Count, Mode=OneWay}" />
                                                <Run Text=" certificates" />
                                            </TextBlock>
                                        </Grid>

                                        <ItemsControl
                                            ItemsSource="{Binding Certificates}"
                                            Margin="24,8,0,0"
                                            Visibility="{Binding IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="{x:Type models:CertificateCardModel}">
                                                    <Border
                                                        Background="#12122A"
                                                        BorderBrush="#333350"
                                                        BorderThickness="1"
                                                        CornerRadius="6"
                                                        Padding="10"
                                                        Margin="0,0,0,6">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" />
                                                            </Grid.RowDefinitions>

                                                            <Grid Grid.Row="0">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                                    <TextBlock
                                                                        Text="{Binding SubjectDisplayName}"
                                                                        FontSize="13"
                                                                        FontWeight="SemiBold"
                                                                        Foreground="White"
                                                                        TextTrimming="CharacterEllipsis"
                                                                        ToolTip="{Binding Certificate.Subject}" />
                                                                    <TextBlock
                                                                        FontSize="11"
                                                                        Foreground="#888888"
                                                                        TextTrimming="CharacterEllipsis"
                                                                        Margin="0,2,0,0">
                                                                        <Run Text="Issuer: " /><Run Text="{Binding IssuerDisplayName, Mode=OneWay}" />
                                                                    </TextBlock>
                                                                </StackPanel>

                                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                                    <Border
                                                                        CornerRadius="4"
                                                                        Padding="6,2"
                                                                        Margin="8,0,0,0">
                                                                        <Border.Style>
                                                                            <Style TargetType="Border">
                                                                                <Setter Property="Background" Value="#1A3D2E" />
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding ExpiryStatus}" Value="ExpiringSoon">
                                                                                        <Setter Property="Background" Value="#3D3A1A" />
                                                                                    </DataTrigger>
                                                                                    <DataTrigger Binding="{Binding ExpiryStatus}" Value="Expired">
                                                                                        <Setter Property="Background" Value="#3D1A1A" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Border.Style>
                                                                        <TextBlock FontSize="10">
                                                                            <TextBlock.Style>
                                                                                <Style TargetType="TextBlock">
                                                                                    <Setter Property="Foreground" Value="#10B981" />
                                                                                    <Setter Property="Text" Value="Valid" />
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding ExpiryStatus}" Value="ExpiringSoon">
                                                                                            <Setter Property="Foreground" Value="#EAB308" />
                                                                                            <Setter Property="Text" Value="Expiring soon" />
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding ExpiryStatus}" Value="Expired">
                                                                                            <Setter Property="Foreground" Value="#EF4444" />
                                                                                            <Setter Property="Text" Value="Expired" />
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </TextBlock.Style>
                                                                        </TextBlock>
                                                                    </Border>
                                                                    <ui:Button
                                                                        Content="{Binding IsExpanded, Converter={StaticResource BooleanToChevronConverter}}"
                                                                        Padding="2"
                                                                        Height="22"
                                                                        Width="22"
                                                                        Margin="4,0,0,0"
                                                                        VerticalAlignment="Center"
                                                                        Click="OnCertificateExpandClick" />
                                                                </StackPanel>
                                                            </Grid>

                                                            <TextBlock
                                                                Grid.Row="1"
                                                                FontSize="11"
                                                                Foreground="#666666"
                                                                Margin="0,2,0,0">
                                                                <Run Text="Expires: " /><Run Text="{Binding Certificate.NotAfter, Mode=OneWay, StringFormat=d}" />
                                                            </TextBlock>

                                                            <StackPanel
                                                                Grid.Row="2"
                                                                Margin="0,6,0,0"
                                                                Visibility="{Binding IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                <Border
                                                                    Background="#0D0D1A"
                                                                    CornerRadius="4"
                                                                    Padding="8">
                                                                    <StackPanel>
                                                                        <TextBlock FontSize="10" Foreground="#666666" Margin="0,0,0,2">
                                                                            <Run Text="Thumbprint: " />
                                                                        </TextBlock>
                                                                        <TextBlock
                                                                            Text="{Binding Certificate.Thumbprint}"
                                                                            FontSize="10"
                                                                            FontFamily="Cascadia Code,Consolas,Courier New"
                                                                            Foreground="#888888"
                                                                            TextWrapping="Wrap"
                                                                            Margin="0,0,0,6" />

                                                                        <TextBlock FontSize="10" Foreground="#666666">
                                                                            <Run Text="Valid: " />
                                                                            <Run Text="{Binding Certificate.NotBefore, Mode=OneWay, StringFormat=d}" />
                                                                            <Run Text=" - " />
                                                                            <Run Text="{Binding Certificate.NotAfter, Mode=OneWay, StringFormat=d}" />
                                                                        </TextBlock>

                                                                        <TextBlock FontSize="10" Foreground="#666666" Margin="0,2,0,0">
                                                                            <Run Text="Subject: " /><Run Text="{Binding Certificate.Subject, Mode=OneWay}" />
                                                                        </TextBlock>

                                                                        <TextBlock FontSize="10" Foreground="#666666" Margin="0,2,0,0"
                                                                                   Visibility="{Binding Certificate.FriendlyName, Converter={StaticResource CountToVisibilityConverter}}">
                                                                            <Run Text="Friendly name: " /><Run Text="{Binding Certificate.FriendlyName, Mode=OneWay}" />
                                                                        </TextBlock>

                                                                        <TextBlock FontSize="10" Foreground="#666666" Margin="0,2,0,0"
                                                                                   Visibility="{Binding Certificate.HasPrivateKey, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                            <Run Text="Has private key" />
                                                                        </TextBlock>
                                                                    </StackPanel>
                                                                </Border>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Font cards for Fonts category -->
            <Grid Grid.Row="1" x:Name="FontDetailPanel">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Font search -->
                <ui:TextBox
                    Grid.Row="0"
                    PlaceholderText="Filter fonts..."
                    Text="{Binding FontSearchText, UpdateSourceTrigger=PropertyChanged}"
                    Width="250"
                    Margin="0,0,0,12" />

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Nerd Fonts -->
                        <StackPanel Visibility="{Binding FilteredNerdFonts.Count, Converter={StaticResource CountToVisibilityConverter}, FallbackValue=Collapsed}">
                            <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="#888888" Margin="0,0,0,8"
                                       Text="Nerd Fonts" />
                            <ItemsControl ItemsSource="{Binding FilteredNerdFonts}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate><WrapPanel /></ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type models:FontCardModel}">
                                        <Border
                                            Background="#1A1A2E"
                                            BorderBrush="{Binding IsSelected, Converter={StaticResource BooleanToBorderBrushConverter}}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="12"
                                            Width="240"
                                            Margin="0,0,12,12">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Column="0"
                                                        Text="{Binding Name}"
                                                        FontFamily="{Binding Name}"
                                                        FontSize="13"
                                                        FontWeight="SemiBold"
                                                        Foreground="White"
                                                        TextTrimming="CharacterEllipsis"
                                                        ToolTip="{Binding Name}"
                                                        VerticalAlignment="Center" />

                                                    <ui:ToggleSwitch
                                                        Grid.Column="1"
                                                        IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                        VerticalAlignment="Center" />
                                                </Grid>

                                                <TextBlock
                                                    Grid.Row="1"
                                                    Text="{Binding Description}"
                                                    FontSize="11"
                                                    Foreground="#888888"
                                                    TextWrapping="Wrap"
                                                    MaxHeight="32"
                                                    Margin="0,4,0,0" />

                                                <controls:StatusRibbon
                                                    Grid.Row="2"
                                                    Status="{Binding Status}"
                                                    Margin="0,4,0,0" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Installed Fonts (grouped by family) -->
                        <StackPanel Visibility="{Binding FilteredInstalledFontGroups.Count, Converter={StaticResource CountToVisibilityConverter}, FallbackValue=Collapsed}"
                                    Margin="0,16,0,0">
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" FontSize="13" FontWeight="SemiBold" Foreground="#888888"
                                           Text="Installed Fonts" VerticalAlignment="Center" />
                                <ui:Button
                                    Grid.Column="2"
                                    Content="Track all installed"
                                    Padding="8,4"
                                    FontSize="11"
                                    VerticalAlignment="Center"
                                    Command="{Binding TrackAllInstalledFontsCommand}" />
                            </Grid>
                            <ItemsControl ItemsSource="{Binding FilteredInstalledFontGroups}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type models:FontFamilyGroupModel}">
                                        <Border
                                            Background="#1A1A2E"
                                            BorderBrush="#333350"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                            <StackPanel>
                                                <!-- Group header -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <ui:Button
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Content="{Binding IsExpanded, Converter={StaticResource BooleanToChevronConverter}}"
                                                        Padding="2"
                                                        Height="22"
                                                        Width="22"
                                                        Margin="0,0,8,0"
                                                        VerticalAlignment="Center"
                                                        Click="OnGroupExpandClick" />

                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Text="{Binding FamilyName}"
                                                        FontFamily="{Binding FamilyName}"
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Foreground="White"
                                                        VerticalAlignment="Center" />

                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="2"
                                                        FontSize="11"
                                                        Foreground="#666666"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0">
                                                        <Run Text="{Binding Fonts.Count, Mode=OneWay}" />
                                                        <Run Text=" variants" />
                                                    </TextBlock>

                                                    <ui:ToggleSwitch
                                                        Grid.Row="0"
                                                        Grid.Column="3"
                                                        IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                        VerticalAlignment="Center" />

                                                    <!-- Specimen phrase -->
                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        Grid.ColumnSpan="3"
                                                        Text="{Binding SpecimenPhrase}"
                                                        FontFamily="{Binding FamilyName}"
                                                        FontSize="12"
                                                        Foreground="#555555"
                                                        FontStyle="Italic"
                                                        TextTrimming="CharacterEllipsis"
                                                        Margin="0,2,0,0" />
                                                </Grid>

                                                <!-- Expanded: individual font cards -->
                                                <ItemsControl
                                                    ItemsSource="{Binding Fonts}"
                                                    Margin="24,8,0,0"
                                                    Visibility="{Binding IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate DataType="{x:Type models:FontCardModel}">
                                                            <Border
                                                                Background="#12122A"
                                                                BorderBrush="{Binding IsSelected, Converter={StaticResource BooleanToBorderBrushConverter}}"
                                                                BorderThickness="1"
                                                                CornerRadius="6"
                                                                Padding="10"
                                                                Margin="0,0,0,6">
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="Auto" />
                                                                        <RowDefinition Height="Auto" />
                                                                        <RowDefinition Height="Auto" />
                                                                    </Grid.RowDefinitions>

                                                                    <Grid Grid.Row="0">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>

                                                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                                            <TextBlock
                                                                                Text="{Binding Name}"
                                                                                FontFamily="{Binding Name}"
                                                                                FontSize="13"
                                                                                Foreground="White"
                                                                                TextTrimming="CharacterEllipsis"
                                                                                ToolTip="{Binding Name}" />
                                                                            <TextBlock
                                                                                Text="{Binding FileName}"
                                                                                FontSize="9"
                                                                                Foreground="#555555"
                                                                                TextTrimming="CharacterEllipsis"
                                                                                Visibility="{Binding FileName, Converter={StaticResource CountToVisibilityConverter}}" />
                                                                        </StackPanel>

                                                                        <ui:Button
                                                                            Grid.Column="1"
                                                                            Icon="{ui:SymbolIcon TextFont16}"
                                                                            Command="{Binding ToggleExpandCommand}"
                                                                            ToolTip="Try font"
                                                                            Padding="2"
                                                                            Height="22"
                                                                            Margin="6,0,0,0"
                                                                            VerticalAlignment="Center" />
                                                                        <ui:Button
                                                                            Grid.Column="2"
                                                                            Icon="{ui:SymbolIcon Eye16}"
                                                                            Command="{Binding PreviewCommand}"
                                                                            ToolTip="View font"
                                                                            Padding="2"
                                                                            Height="22"
                                                                            Margin="4,0,0,0"
                                                                            VerticalAlignment="Center"
                                                                            Visibility="{Binding FullPath, Converter={StaticResource CountToVisibilityConverter}}" />
                                                                        <ui:Button
                                                                            Grid.Column="3"
                                                                            Icon="{ui:SymbolIcon FolderOpen16}"
                                                                            Command="{Binding OpenLocationCommand}"
                                                                            ToolTip="Open font location"
                                                                            Padding="2"
                                                                            Height="22"
                                                                            Margin="4,0,0,0"
                                                                            VerticalAlignment="Center"
                                                                            Visibility="{Binding FullPath, Converter={StaticResource CountToVisibilityConverter}}" />
                                                                        <ui:Button
                                                                            Grid.Column="4"
                                                                            Command="{Binding ToggleBackupCommand}"
                                                                            Padding="2"
                                                                            Height="22"
                                                                            Margin="4,0,0,0"
                                                                            VerticalAlignment="Center"
                                                                            Visibility="{Binding FullPath, Converter={StaticResource CountToVisibilityConverter}}">
                                                                            <ui:Button.Style>
                                                                                <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                                                                    <Setter Property="Icon" Value="{ui:SymbolIcon Delete16}" />
                                                                                    <Setter Property="ToolTip" Value="Backup font (disable)" />
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding IsBackedUp}" Value="True">
                                                                                            <Setter Property="Icon" Value="{ui:SymbolIcon ArrowUndo16}" />
                                                                                            <Setter Property="ToolTip" Value="Restore font" />
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </ui:Button.Style>
                                                                        </ui:Button>

                                                                        <ui:ToggleSwitch
                                                                            Grid.Column="5"
                                                                            IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                            VerticalAlignment="Center"
                                                                            Margin="4,0,0,0" />
                                                                    </Grid>

                                                                    <TextBlock
                                                                        Grid.Row="1"
                                                                        Text="{Binding Description}"
                                                                        FontSize="11"
                                                                        Foreground="#888888"
                                                                        TextTrimming="CharacterEllipsis"
                                                                        Margin="0,4,0,0"
                                                                        Visibility="{Binding Description, Converter={StaticResource CountToVisibilityConverter}}" />

                                                                    <ui:TextBox
                                                                        Grid.Row="2"
                                                                        Text="{Binding SampleText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                        FontFamily="{Binding Name}"
                                                                        FontSize="14"
                                                                        Foreground="White"
                                                                        TextWrapping="Wrap"
                                                                        AcceptsReturn="True"
                                                                        MinHeight="80"
                                                                        MaxHeight="150"
                                                                        Margin="0,8,0,0"
                                                                        Visibility="{Binding IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>

</Page>

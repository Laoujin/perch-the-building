<Page
    x:Class="Perch.Desktop.Views.Pages.SystemTweaksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:Perch.Desktop.ViewModels"
    xmlns:models="clr-namespace:Perch.Desktop.Models"
    xmlns:controls="clr-namespace:Perch.Desktop.Views.Controls"
    d:DataContext="{d:DesignInstance vm:SystemTweaksViewModel}"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Foreground="White"
    Loaded="OnLoaded">

    <Grid Margin="24,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:TextBlock Grid.Column="0" FontTypography="Title" Text="System Tweaks" />

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ui:TextBox
                    PlaceholderText="Search tweaks..."
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    Width="200"
                    Margin="0,0,8,0" />
                <ui:Button
                    Icon="{ui:SymbolIcon ArrowClockwise24}"
                    Command="{Binding RefreshCommand}" />
            </StackPanel>
        </Grid>

        <!-- Loading -->
        <ui:ProgressRing
            Grid.Row="1"
            IsIndeterminate="True"
            Width="32"
            Height="32"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <!-- Category grid (visible when no category selected) -->
        <ScrollViewer
            Grid.Row="1"
            Margin="0,16,0,0"
            VerticalScrollBarVisibility="Auto"
            Visibility="{Binding ShowCategories, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding Categories}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:TweakCategoryCardModel}">
                        <Border
                            Background="#1A1A2E"
                            BorderBrush="#333350"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Width="200"
                            Margin="0,0,12,12"
                            Cursor="Hand"
                            MouseLeftButtonUp="OnCategoryCardClick">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <ui:SymbolIcon
                                    Grid.Row="0"
                                    Symbol="{Binding IconSymbol}"
                                    FontSize="28"
                                    Foreground="#10B981"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,8" />

                                <TextBlock
                                    Grid.Row="1"
                                    Text="{Binding DisplayName}"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="White" />

                                <TextBlock
                                    Grid.Row="2"
                                    FontSize="11"
                                    Foreground="#888888"
                                    Margin="0,4,0,0">
                                    <Run Text="{Binding ItemCount, Mode=OneWay}" />
                                    <Run Text=" items" />
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Detail view (visible when a category is selected) -->
        <Grid
            Grid.Row="1"
            Margin="0,16,0,0"
            Visibility="{Binding ShowDetail, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Back button + category header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                <ui:Button
                    Icon="{ui:SymbolIcon ArrowLeft24}"
                    Command="{Binding BackToCategoriesCommand}"
                    Margin="0,0,12,0" />
                <TextBlock
                    Text="{Binding SelectedCategory}"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White"
                    VerticalAlignment="Center" />
            </StackPanel>

            <!-- Tweak cards for selected category (non-Fonts) -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                          x:Name="TweakDetailPanel">
                <ItemsControl ItemsSource="{Binding FilteredTweaks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate><WrapPanel /></ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:TweakCardModel}">
                            <Border
                                Background="#1A1A2E"
                                BorderBrush="{Binding IsSelected, Converter={StaticResource BooleanToBorderBrushConverter}}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="12"
                                Width="240"
                                Margin="0,0,12,12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <controls:StatusRibbon
                                        Grid.Row="0"
                                        Status="{Binding Status}"
                                        Margin="0,0,0,8" />

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            Text="{Binding Name}"
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            TextTrimming="CharacterEllipsis" />

                                        <ui:ToggleSwitch
                                            Grid.Column="1"
                                            IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                    </Grid>

                                    <TextBlock
                                        Grid.Row="2"
                                        Text="{Binding Description}"
                                        FontSize="11"
                                        Foreground="#888888"
                                        TextWrapping="Wrap"
                                        MaxHeight="32"
                                        Margin="0,4,0,0" />

                                    <TextBlock
                                        Grid.Row="3"
                                        FontSize="10"
                                        Foreground="#666666"
                                        Margin="0,4,0,0">
                                        <Run Text="{Binding TotalCount, Mode=OneWay}" />
                                        <Run Text=" registry entries" />
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Font cards for Fonts category -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                          x:Name="FontDetailPanel">
                <StackPanel>
                    <!-- Detected Fonts -->
                    <StackPanel Visibility="{Binding DetectedFonts.Count, Converter={StaticResource CountToVisibilityConverter}, FallbackValue=Collapsed}">
                        <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="#888888" Margin="0,0,0,8"
                                   Text="Detected on your system" />
                        <ItemsControl ItemsSource="{Binding DetectedFonts}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate><WrapPanel /></ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:FontCardModel}">
                                    <Border
                                        Background="#1A1A2E"
                                        BorderBrush="{Binding IsSelected, Converter={StaticResource BooleanToBorderBrushConverter}}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="12"
                                        Width="240"
                                        Margin="0,0,12,12">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    Text="{Binding Name}"
                                                    FontFamily="{Binding Name}"
                                                    FontSize="13"
                                                    FontWeight="SemiBold"
                                                    Foreground="White"
                                                    TextTrimming="CharacterEllipsis"
                                                    ToolTip="{Binding Name}"
                                                    VerticalAlignment="Center" />

                                                <ui:ToggleSwitch
                                                    Grid.Column="1"
                                                    IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                    VerticalAlignment="Center" />
                                            </Grid>

                                            <TextBlock
                                                Grid.Row="1"
                                                Text="{Binding Description}"
                                                FontSize="11"
                                                Foreground="#888888"
                                                TextTrimming="CharacterEllipsis"
                                                Margin="0,4,0,0"
                                                Visibility="{Binding Description, Converter={StaticResource CountToVisibilityConverter}}" />

                                            <Grid Grid.Row="2" Margin="0,4,0,0">
                                                <controls:StatusRibbon Status="{Binding Status}" HorizontalAlignment="Left" />
                                                <ui:Button
                                                    Icon="{ui:SymbolIcon Eye24}"
                                                    Command="{Binding PreviewCommand}"
                                                    ToolTip="View Font"
                                                    Padding="4"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Visibility="{Binding FullPath, Converter={StaticResource CountToVisibilityConverter}}" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Gallery Fonts -->
                    <StackPanel Visibility="{Binding GalleryFonts.Count, Converter={StaticResource CountToVisibilityConverter}, FallbackValue=Collapsed}"
                                Margin="0,16,0,0">
                        <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="#888888" Margin="0,0,0,8"
                                   Text="Available from gallery" />
                        <ItemsControl ItemsSource="{Binding GalleryFonts}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate><WrapPanel /></ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:FontCardModel}">
                                    <Border
                                        Background="#1A1A2E"
                                        BorderBrush="{Binding IsSelected, Converter={StaticResource BooleanToBorderBrushConverter}}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="12"
                                        Width="240"
                                        Margin="0,0,12,12">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    Text="{Binding Name}"
                                                    FontFamily="{Binding Name}"
                                                    FontSize="13"
                                                    FontWeight="SemiBold"
                                                    Foreground="White"
                                                    TextTrimming="CharacterEllipsis"
                                                    ToolTip="{Binding Name}"
                                                    VerticalAlignment="Center" />

                                                <ui:ToggleSwitch
                                                    Grid.Column="1"
                                                    IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                    VerticalAlignment="Center" />
                                            </Grid>

                                            <TextBlock
                                                Grid.Row="1"
                                                Text="{Binding Description}"
                                                FontSize="11"
                                                Foreground="#888888"
                                                TextWrapping="Wrap"
                                                MaxHeight="32"
                                                Margin="0,4,0,0" />

                                            <controls:StatusRibbon
                                                Grid.Row="2"
                                                Status="{Binding Status}"
                                                Margin="0,4,0,0" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Deploy bar -->
        <controls:DeployBar
            Grid.Row="2"
            SelectedCount="{Binding SelectedCount}"
            ClearRequested="OnClearRequested" />
    </Grid>

</Page>

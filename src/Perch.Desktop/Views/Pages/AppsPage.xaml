<Page
    x:Class="Perch.Desktop.Views.Pages.AppsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:Perch.Desktop.ViewModels"
    xmlns:models="clr-namespace:Perch.Desktop.Models"
    xmlns:controls="clr-namespace:Perch.Desktop.Views.Controls"
    d:DataContext="{d:DesignInstance vm:AppsViewModel}"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Foreground="White"
    Loaded="OnLoaded">

    <Grid Margin="24,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:TextBlock Grid.Column="0" FontTypography="Title" Text="Applications" />

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ui:TextBox
                    PlaceholderText="Search apps..."
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    Width="200"
                    Margin="0,0,8,0" />
                <ui:Button
                    Icon="{ui:SymbolIcon ArrowClockwise24}"
                    Command="{Binding RefreshCommand}" />
            </StackPanel>
        </Grid>

        <!-- Loading -->
        <ui:ProgressRing
            Grid.Row="1"
            IsIndeterminate="True"
            Width="32"
            Height="32"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <!-- Category grid (visible when no category selected) -->
        <ScrollViewer
            Grid.Row="1"
            Margin="0,16,0,0"
            VerticalScrollBarVisibility="Auto"
            Visibility="{Binding ShowAppCategories, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding AppCategories}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:AppCategoryCardModel}">
                        <Border
                            Background="#1A1A2E"
                            BorderBrush="#333350"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Width="200"
                            Margin="0,0,12,12"
                            Cursor="Hand"
                            MouseLeftButtonUp="OnAppCategoryCardClick">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <ui:SymbolIcon
                                    Grid.Row="0"
                                    Symbol="{Binding IconSymbol}"
                                    FontSize="28"
                                    Foreground="#10B981"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,8" />

                                <TextBlock
                                    Grid.Row="1"
                                    Text="{Binding DisplayName}"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="White" />

                                <TextBlock
                                    Grid.Row="2"
                                    FontSize="11"
                                    Foreground="#888888"
                                    Margin="0,4,0,0">
                                    <Run Text="{Binding ItemCount, Mode=OneWay}" />
                                    <Run Text=" apps" />
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Detail view (visible when a category is selected) -->
        <Grid
            Grid.Row="1"
            Margin="0,16,0,0"
            Visibility="{Binding ShowAppDetail, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Back button + category header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                <ui:Button
                    Icon="{ui:SymbolIcon ArrowLeft24}"
                    Command="{Binding BackToCategoriesCommand}"
                    Margin="0,0,12,0" />
                <TextBlock
                    Text="{Binding SelectedAppCategory}"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White"
                    VerticalAlignment="Center" />
            </StackPanel>

            <!-- Subcategory-grouped app cards -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredCategoryApps}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:AppCategoryGroup}">
                            <StackPanel>
                                <controls:TierSectionHeader
                                    Title="{Binding Category}"
                                    ItemCount="{Binding Apps.Count}" />
                                <ItemsControl ItemsSource="{Binding Apps}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:AppCardModel}">
                                            <controls:AppCard
                                                DisplayLabel="{Binding DisplayLabel}"
                                                Description="{Binding Description}"
                                                Category="{Binding Category}"
                                                Status="{Binding Status}"
                                                Website="{Binding Website}"
                                                GitHub="{Binding GitHub}"
                                                CanLink="{Binding CanLink}"
                                                CanUnlink="{Binding CanUnlink}"
                                                CanFix="{Binding CanFix}"
                                                LinkRequested="OnLinkRequested"
                                                UnlinkRequested="OnUnlinkRequested"
                                                FixRequested="OnFixRequested"
                                                ConfigureRequested="OnConfigureRequested"
                                                Margin="0,0,12,12" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- App config detail view (3rd level: visible when an app is selected) -->
        <Grid
            Grid.Row="1"
            Margin="0,16,0,0"
            Visibility="{Binding ShowAppConfigDetail, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Back button + app name header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                <ui:Button
                    Icon="{ui:SymbolIcon ArrowLeft24}"
                    Command="{Binding BackToCategoryDetailCommand}"
                    Margin="0,0,12,0" />
                <TextBlock
                    Text="{Binding SelectedApp.DisplayLabel}"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White"
                    VerticalAlignment="Center" />
            </StackPanel>

            <!-- Detail loading spinner -->
            <ui:ProgressRing
                Grid.Row="1"
                IsIndeterminate="True"
                Width="32"
                Height="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsLoadingAppDetail, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <!-- Detail content -->
            <ScrollViewer
                Grid.Row="1"
                VerticalScrollBarVisibility="Auto"
                Visibility="{Binding IsLoadingAppDetail, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <StackPanel Margin="0,0,0,16">
                    <!-- Card info -->
                    <Border Background="#1A1A2E" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <controls:StatusRibbon
                                Grid.Row="0"
                                Status="{Binding SelectedApp.Status}"
                                Margin="0,0,0,8" />

                            <TextBlock
                                Grid.Row="1"
                                Text="{Binding SelectedApp.DisplayLabel}"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Margin="0,0,0,4" />

                            <TextBlock
                                Grid.Row="2"
                                Text="{Binding SelectedApp.Description}"
                                FontSize="12"
                                Foreground="#AAAAAA"
                                TextWrapping="Wrap"
                                Margin="0,0,0,4"
                                Visibility="{Binding SelectedApp.Description, Converter={StaticResource CountToVisibilityConverter}}" />

                            <TextBlock
                                Grid.Row="3"
                                Text="{Binding SelectedApp.Category}"
                                FontSize="11"
                                Foreground="#888888"
                                Margin="0,0,0,4" />

                            <!-- Website + GitHub links -->
                            <StackPanel
                                Grid.Row="4"
                                Orientation="Horizontal"
                                Margin="0,0,0,4">
                                <Button
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="4,2"
                                    Margin="0,0,8,0"
                                    Tag="{Binding SelectedApp.Website}"
                                    Click="OnExternalLinkClick"
                                    Visibility="{Binding SelectedApp.Website, Converter={StaticResource CountToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <ui:SymbolIcon Symbol="Globe24" FontSize="12" Foreground="#6B7280" />
                                        <TextBlock Text="Website" FontSize="11" Foreground="#6B7280" Margin="4,0,0,0" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="4,2"
                                    Tag="{Binding SelectedApp.GitHub}"
                                    Click="OnExternalLinkClick"
                                    Visibility="{Binding SelectedApp.GitHub, Converter={StaticResource CountToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <ui:SymbolIcon Symbol="Code24" FontSize="12" Foreground="#6B7280" />
                                        <TextBlock Text="GitHub" FontSize="11" Foreground="#6B7280" Margin="4,0,0,0" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!-- Action buttons + module info (only when module found) -->
                            <StackPanel
                                Grid.Row="5"
                                Orientation="Horizontal"
                                Margin="0,4,0,0"
                                Visibility="{Binding HasModule, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ui:Button
                                    Content="Link"
                                    Appearance="Primary"
                                    Padding="12,4"
                                    FontSize="11"
                                    Margin="0,0,6,0"
                                    Command="{Binding LinkAppCommand}"
                                    CommandParameter="{Binding SelectedApp}"
                                    Visibility="{Binding SelectedApp.CanLink, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <ui:Button
                                    Content="Unlink"
                                    Appearance="Secondary"
                                    Padding="12,4"
                                    FontSize="11"
                                    Margin="0,0,6,0"
                                    Command="{Binding UnlinkAppCommand}"
                                    CommandParameter="{Binding SelectedApp}"
                                    Visibility="{Binding SelectedApp.CanUnlink, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <ui:Button
                                    Content="Fix"
                                    Appearance="Caution"
                                    Padding="12,4"
                                    FontSize="11"
                                    Margin="0,0,12,0"
                                    Command="{Binding FixAppCommand}"
                                    CommandParameter="{Binding SelectedApp}"
                                    Visibility="{Binding SelectedApp.CanFix, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                <ui:SymbolIcon
                                    Symbol="Box24"
                                    FontSize="14"
                                    Foreground="#888888"
                                    Margin="0,0,6,0" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="#10B981"
                                    VerticalAlignment="Center"
                                    Text="{Binding AppDetail.OwningModule.DisplayName}" />
                            </StackPanel>

                            <!-- No module found -->
                            <StackPanel
                                Grid.Row="5"
                                Orientation="Horizontal"
                                Margin="0,4,0,0"
                                Visibility="{Binding HasNoModule, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ui:SymbolIcon
                                    Symbol="Box24"
                                    FontSize="14"
                                    Foreground="#666666"
                                    Margin="0,0,6,0" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="#666666"
                                    VerticalAlignment="Center"
                                    Text="No module found" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- UI / YAML toggle (only when module found) -->
                    <StackPanel
                        Orientation="Horizontal"
                        Margin="0,0,0,12"
                        Visibility="{Binding HasModule, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ui:Button
                            Content="UI"
                            Margin="0,0,4,0"
                            Padding="12,4"
                            Command="{Binding ToggleEditorCommand}"
                            IsEnabled="{Binding ShowRawEditor}" />
                        <ui:Button
                            Content="YAML"
                            Padding="12,4"
                            Command="{Binding ToggleEditorCommand}"
                            IsEnabled="{Binding ShowRawEditor, Converter={StaticResource InverseBooleanConverter}}" />
                    </StackPanel>

                    <!-- Structured view (links, hooks, registry) -->
                    <Border
                        Background="#1A1A2E"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,0,12"
                        Visibility="{Binding ShowStructuredView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <!-- Links -->
                            <TextBlock Text="Links" FontSize="13" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8" />
                            <ItemsControl ItemsSource="{Binding AppDetail.Manifest.Links}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="{Binding Source}" FontSize="11" Foreground="#10B981" />
                                            <TextBlock Text=" -> " FontSize="11" Foreground="#666666" />
                                            <TextBlock Text="{Binding Target}" FontSize="11" Foreground="#888888" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Hooks -->
                            <StackPanel
                                Margin="0,12,0,0"
                                Visibility="{Binding AppDetail.Manifest.Hooks, Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="Hooks" FontSize="13" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8" />
                                <TextBlock FontSize="11" Foreground="#888888">
                                    <Run Text="pre-deploy: " /><Run Text="{Binding AppDetail.Manifest.Hooks.PreDeploy, Mode=OneWay}" Foreground="#10B981" />
                                </TextBlock>
                                <TextBlock FontSize="11" Foreground="#888888">
                                    <Run Text="post-deploy: " /><Run Text="{Binding AppDetail.Manifest.Hooks.PostDeploy, Mode=OneWay}" Foreground="#10B981" />
                                </TextBlock>
                            </StackPanel>

                            <!-- Registry entries -->
                            <StackPanel Margin="0,12,0,0">
                                <StackPanel.Visibility>
                                    <Binding Path="AppDetail.Manifest.Registry.Length" Converter="{StaticResource CountToVisibilityConverter}" FallbackValue="Collapsed" />
                                </StackPanel.Visibility>
                                <TextBlock Text="Registry" FontSize="13" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8" />
                                <ItemsControl ItemsSource="{Binding AppDetail.Manifest.Registry}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock FontSize="11" Foreground="#888888" TextWrapping="Wrap" Margin="0,0,0,4">
                                                <Run Text="{Binding Key, Mode=OneWay}" /><Run Text="\" /><Run Text="{Binding Name, Mode=OneWay}" Foreground="#10B981" />
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- YAML editor view -->
                    <Border
                        Background="#1A1A2E"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,0,12"
                        Visibility="{Binding ShowEditorView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBox
                            Text="{Binding AppDetail.ManifestYaml, Mode=OneWay}"
                            AcceptsReturn="True"
                            IsReadOnly="True"
                            FontFamily="Consolas"
                            FontSize="12"
                            Foreground="#CCCCCC"
                            Background="Transparent"
                            BorderThickness="0"
                            TextWrapping="Wrap"
                            MaxHeight="400"
                            VerticalScrollBarVisibility="Auto" />
                    </Border>

                    <!-- Drag & drop zone (only when module found) -->
                    <Border
                        Background="Transparent"
                        BorderBrush="#444444"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24"
                        Margin="0,0,0,12"
                        AllowDrop="True"
                        DragOver="OnDropZoneDragOver"
                        Drop="OnDropZoneDrop"
                        Visibility="{Binding HasModule, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="#444444" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#10B981" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel HorizontalAlignment="Center">
                            <ui:SymbolIcon
                                Symbol="ArrowDownload24"
                                FontSize="24"
                                Foreground="#666666"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,8" />
                            <TextBlock
                                Text="Drop files here to add as symlinks"
                                FontSize="12"
                                Foreground="#666666"
                                HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>

                    <!-- Alternative apps -->
                    <StackPanel
                        Margin="0,0,0,12"
                        Visibility="{Binding HasAlternatives, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock
                            Text="Alternatives"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Margin="0,0,0,8" />
                        <ItemsControl ItemsSource="{Binding AppDetail.Alternatives}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <controls:AppCard
                                        DisplayLabel="{Binding Name}"
                                        Description="{Binding Description}"
                                        Category="{Binding Category}"
                                        Website="{Binding Links.Website}"
                                        GitHub="{Binding Links.GitHub}"
                                        Margin="0,0,12,12" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>

</Page>

<Page
    x:Class="Perch.Desktop.Views.Pages.AppsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:Perch.Desktop.ViewModels"
    xmlns:models="clr-namespace:Perch.Desktop.Models"
    xmlns:controls="clr-namespace:Perch.Desktop.Views.Controls"
    d:DataContext="{d:DesignInstance vm:AppsViewModel}"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Foreground="White"
    Loaded="OnLoaded">

    <controls:CardGalleryLayout ErrorTitle="Failed to load apps">
        <controls:CardGalleryLayout.HeaderContent>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ui:TextBlock Grid.Column="0" FontTypography="Title" Text="Applications" />

                <!-- Status summary -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                    <Border Background="{StaticResource SuccessSubtleBrush}" CornerRadius="10" Padding="8,3" Margin="0,0,8,0">
                        <TextBlock FontSize="11">
                            <Run Text="{Binding LinkedCount, Mode=OneWay}" Foreground="{StaticResource SuccessBrush}" FontWeight="SemiBold" />
                            <Run Text=" linked" Foreground="{StaticResource SuccessBrush}" />
                        </TextBlock>
                    </Border>
                    <Border Background="{StaticResource WarningSubtleBrush}" CornerRadius="10" Padding="8,3" Margin="0,0,8,0"
                            Visibility="{Binding DriftedCount, Converter={StaticResource CountToVisibilityConverter}}">
                        <TextBlock FontSize="11">
                            <Run Text="{Binding DriftedCount, Mode=OneWay}" Foreground="{StaticResource WarningBrush}" FontWeight="SemiBold" />
                            <Run Text=" drifted" Foreground="{StaticResource WarningBrush}" />
                        </TextBlock>
                    </Border>
                    <Border Background="{StaticResource InfoSubtleBrush}" CornerRadius="10" Padding="8,3"
                            Visibility="{Binding DetectedCount, Converter={StaticResource CountToVisibilityConverter}}">
                        <TextBlock FontSize="11">
                            <Run Text="{Binding DetectedCount, Mode=OneWay}" Foreground="{StaticResource InfoBrush}" FontWeight="SemiBold" />
                            <Run Text=" detected" Foreground="{StaticResource InfoBrush}" />
                        </TextBlock>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <ui:TextBox
                        PlaceholderText="Search apps..."
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                        Width="200"
                        Margin="0,0,8,0" />
                    <ui:Button
                        Icon="{ui:SymbolIcon ArrowClockwise24}"
                        Command="{Binding RefreshCommand}" />
                </StackPanel>
            </Grid>
        </controls:CardGalleryLayout.HeaderContent>

        <controls:CardGalleryLayout.GridContent>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:AppCategoryCardModel}">
                            <StackPanel Margin="0,0,0,4">
                                <!-- Category header -->
                                <Border
                                    Background="{StaticResource CardBackgroundBrush}"
                                    BorderBrush="{StaticResource PanelBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="12"
                                    Margin="0,0,0,8"
                                    Cursor="Hand"
                                    MouseLeftButtonUp="OnCategoryClick">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <ui:SymbolIcon
                                            Grid.Column="0"
                                            Symbol="{Binding IconSymbol}"
                                            FontSize="20"
                                            Foreground="{StaticResource AccentBrush}"
                                            VerticalAlignment="Center"
                                            Margin="0,0,12,0" />

                                        <TextBlock
                                            Grid.Column="1"
                                            Text="{Binding DisplayName}"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            VerticalAlignment="Center" />

                                        <StackPanel
                                            Grid.Column="2"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            Margin="0,0,12,0">
                                            <Border
                                                Background="{StaticResource InfoSubtleBrush}"
                                                CornerRadius="8"
                                                Padding="6,2"
                                                Margin="0,0,6,0"
                                                Visibility="{Binding DetectedCount, Converter={StaticResource CountToVisibilityConverter}}">
                                                <TextBlock FontSize="10">
                                                    <Run Text="{Binding DetectedCount, Mode=OneWay}" Foreground="{StaticResource InfoBrush}" FontWeight="SemiBold" />
                                                    <Run Text=" detected" Foreground="{StaticResource InfoBrush}" />
                                                </TextBlock>
                                            </Border>
                                            <Border
                                                Background="{StaticResource SuggestedLightSubtleBrush}"
                                                CornerRadius="8"
                                                Padding="6,2"
                                                Margin="0,0,6,0"
                                                Visibility="{Binding SuggestedCount, Converter={StaticResource CountToVisibilityConverter}}">
                                                <TextBlock FontSize="10">
                                                    <Run Text="{Binding SuggestedCount, Mode=OneWay}" Foreground="{StaticResource SuggestedLightBrush}" FontWeight="SemiBold" />
                                                    <Run Text=" suggested" Foreground="{StaticResource SuggestedLightBrush}" />
                                                </TextBlock>
                                            </Border>
                                            <TextBlock FontSize="11" Foreground="{StaticResource TextMutedBrush}">
                                                <Run Text="{Binding ItemCount, Mode=OneWay}" />
                                                <Run Text=" apps" />
                                            </TextBlock>
                                        </StackPanel>

                                        <ui:SymbolIcon
                                            Grid.Column="3"
                                            Symbol="ChevronDown24"
                                            FontSize="12"
                                            Foreground="{StaticResource TextDimBrush}"
                                            VerticalAlignment="Center"
                                            RenderTransformOrigin="0.5,0.5">
                                            <ui:SymbolIcon.Style>
                                                <Style TargetType="ui:SymbolIcon">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                                            <Setter Property="RenderTransform">
                                                                <Setter.Value>
                                                                    <RotateTransform Angle="180" />
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ui:SymbolIcon.Style>
                                        </ui:SymbolIcon>
                                    </Grid>
                                </Border>

                                <!-- Expanded sub-groups -->
                                <ItemsControl
                                    ItemsSource="{Binding SubGroups}"
                                    Visibility="{Binding IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Margin="0,0,0,12">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:AppCategoryGroup}">
                                            <StackPanel Margin="24,0,0,8">
                                                <!-- Sub-category header -->
                                                <TextBlock
                                                    Text="{Binding SubCategory}"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Foreground="{StaticResource SubcategoryTextBrush}"
                                                    Margin="0,0,0,6" />

                                                <!-- App cards -->
                                                <ItemsControl ItemsSource="{Binding Apps}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate DataType="{x:Type models:AppCardModel}">
                                                            <controls:AppCard
                                                                DisplayLabel="{Binding DisplayLabel}"
                                                                Description="{Binding Description}"
                                                                Category="{Binding Category}"
                                                                Status="{Binding Status}"
                                                                LogoUrl="{Binding LogoUrl}"
                                                                Website="{Binding Website}"
                                                                Docs="{Binding Docs}"
                                                                GitHub="{Binding GitHub}"
                                                                ConfigPath="{Binding ConfigPath}"
                                                                License="{Binding License}"
                                                                IsManaged="{Binding IsManaged}"
                                                                ActionButtonText="{Binding ActionButtonText}"
                                                                IsActionAdd="{Binding IsActionAdd}"
                                                                IsSuggested="{Binding IsSuggested}"
                                                                KindBadge="{Binding KindBadge}"
                                                                GitHubStarsFormatted="{Binding GitHubStarsFormatted}"
                                                                IsHot="{Binding IsHot}"
                                                                Tags="{Binding Tags}"
                                                                HasDetailPage="{Binding HasDetailPage}"
                                                                ConfigureClicked="OnConfigureClicked"
                                                                ActionClicked="OnActionClicked"
                                                                TagClicked="OnTagClicked"
                                                                NavigateToAppRequested="OnNavigateToAppRequested"
                                                                Margin="0,0,12,12" />
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </controls:CardGalleryLayout.GridContent>

    </controls:CardGalleryLayout>

</Page>

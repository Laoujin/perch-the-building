<Page
    x:Class="Perch.Desktop.Views.Pages.DotfilesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:Perch.Desktop.ViewModels"
    xmlns:models="clr-namespace:Perch.Desktop.Models"
    xmlns:controls="clr-namespace:Perch.Desktop.Views.Controls"
    d:DataContext="{d:DesignInstance vm:DotfilesViewModel}"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Foreground="White"
    Loaded="OnLoaded">

    <Grid Margin="24,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <ui:TextBlock FontTypography="Title" Text="Dotfiles" />
                <ui:TextBlock
                    FontTypography="Caption"
                    Opacity="0.6"
                    Margin="0,4,0,0">
                    <ui:TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} of {1} linked">
                            <Binding Path="LinkedCount" />
                            <Binding Path="TotalCount" />
                        </MultiBinding>
                    </ui:TextBlock.Text>
                </ui:TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                <ui:TextBox
                    PlaceholderText="Search dotfiles..."
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    Width="200"
                    Margin="0,0,8,0" />
                <ui:Button
                    Icon="{ui:SymbolIcon ArrowClockwise24}"
                    Command="{Binding RefreshCommand}" />
            </StackPanel>
        </Grid>

        <!-- Loading -->
        <ui:ProgressRing
            Grid.Row="1"
            IsIndeterminate="True"
            Width="32"
            Height="32"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <!-- Dotfile cards (card layout like Apps) -->
        <ScrollViewer
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto"
            Visibility="{Binding ShowCardGrid, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding Dotfiles}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:DotfileCardModel}">
                        <Border
                            Background="#1A1A2E"
                            BorderBrush="{Binding IsSelected, Converter={StaticResource BooleanToBorderBrushConverter}}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12"
                            Width="240"
                            Margin="0,0,12,12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <controls:StatusRibbon
                                    Grid.Row="0"
                                    Status="{Binding Status}"
                                    Margin="0,0,0,8" />

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <ui:SymbolIcon
                                        Grid.Column="0"
                                        Symbol="Document24"
                                        FontSize="20"
                                        Foreground="#888888"
                                        VerticalAlignment="Center"
                                        Margin="0,0,8,0" />

                                    <TextBlock
                                        Grid.Column="1"
                                        Text="{Binding Name}"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        VerticalAlignment="Center"
                                        TextTrimming="CharacterEllipsis" />

                                    <ui:Button
                                        Grid.Column="2"
                                        Icon="{ui:SymbolIcon Settings24}"
                                        Appearance="Secondary"
                                        Padding="4"
                                        Margin="4,0"
                                        VerticalAlignment="Center"
                                        Command="{Binding DataContext.ConfigureCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}" />

                                    <ui:ToggleSwitch
                                        Grid.Column="3"
                                        IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                        VerticalAlignment="Center" />
                                </Grid>

                                <TextBlock
                                    Grid.Row="2"
                                    Text="{Binding Group}"
                                    FontSize="11"
                                    Foreground="#888888"
                                    Margin="0,4,0,0"
                                    Visibility="{Binding Group, Converter={StaticResource CountToVisibilityConverter}}" />

                                <TextBlock
                                    Grid.Row="3"
                                    Text="{Binding FullPath, Converter={StaticResource PathEllipsisConverter}}"
                                    ToolTip="{Binding FullPath}"
                                    FontSize="10"
                                    Foreground="#666666"
                                    TextWrapping="Wrap"
                                    MaxHeight="28"
                                    Margin="0,4,0,0" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Detail view -->
        <Grid
            Grid.Row="1"
            Visibility="{Binding ShowDetailView, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                <ui:Button
                    Icon="{ui:SymbolIcon ArrowLeft24}"
                    Command="{Binding BackToGridCommand}"
                    Margin="0,0,12,0" />
                <TextBlock
                    Text="{Binding SelectedDotfile.Name}"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White"
                    VerticalAlignment="Center" />
            </StackPanel>

            <!-- Detail loading spinner -->
            <ui:ProgressRing
                Grid.Row="1"
                IsIndeterminate="True"
                Width="32"
                Height="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsLoadingDetail, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <!-- Detail content -->
            <ScrollViewer
                Grid.Row="1"
                VerticalScrollBarVisibility="Auto"
                Visibility="{Binding IsLoadingDetail, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <StackPanel Margin="0,0,0,16">
                    <!-- Card info -->
                    <Border Background="#1A1A2E" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <controls:StatusRibbon
                                Grid.Row="0"
                                Status="{Binding SelectedDotfile.Status}"
                                Margin="0,0,0,8" />

                            <TextBlock
                                Grid.Row="1"
                                Text="{Binding SelectedDotfile.FullPath}"
                                ToolTip="{Binding SelectedDotfile.FullPath}"
                                FontSize="12"
                                Foreground="#888888"
                                TextWrapping="Wrap"
                                Margin="0,0,0,4" />

                            <TextBlock
                                Grid.Row="2"
                                Text="{Binding SelectedDotfile.Group}"
                                FontSize="11"
                                Foreground="#888888"
                                Margin="0,0,0,4"
                                Visibility="{Binding SelectedDotfile.Group, Converter={StaticResource CountToVisibilityConverter}}" />

                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock
                                    FontSize="11"
                                    Foreground="#888888"
                                    Text="Symlink"
                                    Visibility="{Binding SelectedDotfile.IsSymlink, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="#888888"
                                    Text="Regular file"
                                    Visibility="{Binding SelectedDotfile.IsSymlink, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                            </StackPanel>

                            <!-- Module info -->
                            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,4,0,0">
                                <ui:SymbolIcon
                                    Symbol="Box24"
                                    FontSize="14"
                                    Foreground="#888888"
                                    Margin="0,0,6,0" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="#10B981"
                                    Text="{Binding Detail.OwningModule.DisplayName}"
                                    Visibility="{Binding HasModule, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="#666666"
                                    Text="No module found"
                                    Visibility="{Binding HasNoModule, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- UI / YAML toggle (only when module found) -->
                    <StackPanel
                        Orientation="Horizontal"
                        Margin="0,0,0,12"
                        Visibility="{Binding HasModule, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ui:Button
                            Content="UI"
                            Margin="0,0,4,0"
                            Padding="12,4"
                            Command="{Binding ToggleEditorCommand}"
                            IsEnabled="{Binding ShowRawEditor}" />
                        <ui:Button
                            Content="YAML"
                            Padding="12,4"
                            Command="{Binding ToggleEditorCommand}"
                            IsEnabled="{Binding ShowRawEditor, Converter={StaticResource InverseBooleanConverter}}" />
                    </StackPanel>

                    <!-- Structured view (links, hooks, registry) -->
                    <Border
                        Background="#1A1A2E"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,0,12"
                        Visibility="{Binding ShowStructuredView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <!-- Links -->
                            <TextBlock Text="Links" FontSize="13" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8" />
                            <ItemsControl ItemsSource="{Binding Detail.Manifest.Links}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="{Binding Source}" FontSize="11" Foreground="#10B981" />
                                            <TextBlock Text=" â†’ " FontSize="11" Foreground="#666666" />
                                            <TextBlock Text="{Binding Target}" FontSize="11" Foreground="#888888" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Hooks -->
                            <StackPanel
                                Margin="0,12,0,0"
                                Visibility="{Binding Detail.Manifest.Hooks, Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="Hooks" FontSize="13" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8" />
                                <TextBlock FontSize="11" Foreground="#888888">
                                    <Run Text="pre-deploy: " /><Run Text="{Binding Detail.Manifest.Hooks.PreDeploy, Mode=OneWay}" Foreground="#10B981" />
                                </TextBlock>
                                <TextBlock FontSize="11" Foreground="#888888">
                                    <Run Text="post-deploy: " /><Run Text="{Binding Detail.Manifest.Hooks.PostDeploy, Mode=OneWay}" Foreground="#10B981" />
                                </TextBlock>
                            </StackPanel>

                            <!-- Registry entries -->
                            <StackPanel Margin="0,12,0,0">
                                <StackPanel.Visibility>
                                    <Binding Path="Detail.Manifest.Registry.Length" Converter="{StaticResource CountToVisibilityConverter}" FallbackValue="Collapsed" />
                                </StackPanel.Visibility>
                                <TextBlock Text="Registry" FontSize="13" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8" />
                                <ItemsControl ItemsSource="{Binding Detail.Manifest.Registry}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock FontSize="11" Foreground="#888888" TextWrapping="Wrap" Margin="0,0,0,4">
                                                <Run Text="{Binding Key, Mode=OneWay}" /><Run Text="\" /><Run Text="{Binding Name, Mode=OneWay}" Foreground="#10B981" />
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- YAML editor view -->
                    <Border
                        Background="#1A1A2E"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,0,12"
                        Visibility="{Binding ShowEditorView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBox
                            Text="{Binding Detail.ManifestYaml, Mode=OneWay}"
                            AcceptsReturn="True"
                            IsReadOnly="True"
                            FontFamily="Consolas"
                            FontSize="12"
                            Foreground="#CCCCCC"
                            Background="Transparent"
                            BorderThickness="0"
                            TextWrapping="Wrap"
                            MaxHeight="400"
                            VerticalScrollBarVisibility="Auto" />
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Deploy bar -->
        <controls:DeployBar
            Grid.Row="2"
            SelectedCount="{Binding SelectedCount}"
            ClearRequested="OnClearRequested" />
    </Grid>

</Page>

<Page
    x:Class="Perch.Desktop.Views.Pages.DotfilesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:Perch.Desktop.ViewModels"
    xmlns:models="clr-namespace:Perch.Desktop.Models"
    xmlns:controls="clr-namespace:Perch.Desktop.Views.Controls"
    xmlns:catalog="clr-namespace:Perch.Core.Catalog;assembly=Perch.Core"
    d:DataContext="{d:DesignInstance vm:DotfilesViewModel}"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Foreground="White"
    Loaded="OnLoaded">

    <controls:CardGalleryLayout ErrorTitle="Failed to load dotfiles">
        <controls:CardGalleryLayout.HeaderContent>
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <ui:TextBlock FontTypography="Title" Text="Dotfiles" />
                    <ui:TextBlock
                        FontTypography="Caption"
                        Opacity="0.6"
                        Margin="0,4,0,0">
                        <ui:TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} of {1} linked">
                                <Binding Path="LinkedCount" />
                                <Binding Path="TotalCount" />
                            </MultiBinding>
                        </ui:TextBlock.Text>
                    </ui:TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <ui:TextBox
                        PlaceholderText="Search dotfiles..."
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                        Width="200"
                        Margin="0,0,8,0" />
                    <ui:Button
                        Icon="{ui:SymbolIcon ArrowClockwise24}"
                        Command="{Binding RefreshCommand}" />
                </StackPanel>
            </Grid>
        </controls:CardGalleryLayout.HeaderContent>

        <controls:CardGalleryLayout.GridContent>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Dotfiles}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:AppCardModel}">
                            <controls:AppCard
                                DisplayLabel="{Binding DisplayLabel}"
                                Description="{Binding Description}"
                                Category="{Binding Category}"
                                Status="{Binding Status}"
                                LogoUrl="{Binding LogoUrl}"
                                Website="{Binding Website}"
                                Docs="{Binding Docs}"
                                GitHub="{Binding GitHub}"
                                License="{Binding License}"
                                IsManaged="{Binding IsManaged}"
                                ActionButtonText="{Binding ActionButtonText}"
                                IsActionAdd="{Binding IsActionAdd}"
                                IsSuggested="{Binding IsSuggested}"
                                KindBadge="{Binding KindBadge}"
                                GitHubStarsFormatted="{Binding GitHubStarsFormatted}"
                                IsTopPick="{Binding IsTopPick}"
                                Tags="{Binding Tags}"
                                ConfigureClicked="OnConfigureClicked"
                                ActionClicked="OnActionClicked"
                                Margin="0,0,12,12" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </controls:CardGalleryLayout.GridContent>

        <controls:CardGalleryLayout.DetailContent>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                    <ui:Button
                        Icon="{ui:SymbolIcon ArrowLeft24}"
                        Command="{Binding BackToGridCommand}"
                        Margin="0,0,12,0" />
                    <TextBlock
                        Text="{Binding SelectedApp.DisplayLabel}"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="White"
                        VerticalAlignment="Center" />
                </StackPanel>

                <!-- Detail loading spinner -->
                <ui:ProgressRing
                    Grid.Row="1"
                    IsIndeterminate="True"
                    Width="32"
                    Height="32"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding IsLoadingDetail, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <!-- Detail content -->
                <ScrollViewer
                    Grid.Row="1"
                    VerticalScrollBarVisibility="Auto"
                    Visibility="{Binding IsLoadingDetail, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <StackPanel Margin="0,0,0,16">
                        <!-- Card info -->
                        <Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <controls:StatusRibbon
                                    Grid.Row="0"
                                    Status="{Binding SelectedApp.Status}"
                                    Margin="0,0,0,8" />

                                <TextBlock
                                    Grid.Row="1"
                                    Text="{Binding SelectedApp.Category}"
                                    FontSize="11"
                                    Foreground="{StaticResource TextMutedBrush}"
                                    Margin="0,0,0,4" />

                                <!-- Individual files -->
                                <ItemsControl
                                    Grid.Row="2"
                                    ItemsSource="{Binding Detail.FileStatuses}"
                                    Margin="0,4,0,4"
                                    Visibility="{Binding HasFileStatuses, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <ui:SymbolIcon
                                                    Grid.Column="0"
                                                    FontSize="12"
                                                    Margin="0,0,6,0">
                                                    <ui:SymbolIcon.Style>
                                                        <Style TargetType="ui:SymbolIcon">
                                                            <Setter Property="Symbol" Value="Document24" />
                                                            <Setter Property="Foreground" Value="{StaticResource TextDimBrush}" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Linked">
                                                                    <Setter Property="Symbol" Value="CheckmarkCircle24" />
                                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Drift">
                                                                    <Setter Property="Symbol" Value="Warning24" />
                                                                    <Setter Property="Foreground" Value="{StaticResource WarningBrush}" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ui:SymbolIcon.Style>
                                                </ui:SymbolIcon>
                                                <TextBlock Grid.Column="1" Text="{Binding FileName}" FontSize="11" Foreground="White" Margin="0,0,8,0" />
                                                <TextBlock Grid.Column="2" Text="{Binding FullPath}" FontSize="10" Foreground="{StaticResource TextDimBrush}"
                                                           TextTrimming="CharacterEllipsis" ToolTip="{Binding FullPath}" />
                                                <Button
                                                    Grid.Column="3"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="4,2"
                                                    Margin="4,0,0,0"
                                                    Click="OnOpenFileLocationClick"
                                                    Tag="{Binding FullPath}"
                                                    ToolTip="Open in Explorer"
                                                    Visibility="{Binding Exists, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <ui:SymbolIcon Symbol="FolderOpen24" FontSize="12" Foreground="{StaticResource LinkTextBrush}" />
                                                </Button>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Module info -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,4,0,0">
                                    <ui:SymbolIcon
                                        Symbol="Box24"
                                        FontSize="14"
                                        Foreground="{StaticResource TextMutedBrush}"
                                        Margin="0,0,6,0" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="{StaticResource AccentBrush}"
                                        Text="{Binding Detail.OwningModule.DisplayName}"
                                        Visibility="{Binding HasModule, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="{StaticResource TextDimBrush}"
                                        Text="No module found"
                                        Visibility="{Binding HasNoModule, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Structured view (links, hooks, registry) -->
                        <Border
                            Background="{StaticResource CardBackgroundBrush}"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,12"
                            Visibility="{Binding HasModule, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <!-- Links -->
                                <TextBlock Text="Links" FontSize="13" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8" />
                                <ItemsControl ItemsSource="{Binding Detail.Manifest.Links}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <TextBlock Text="{Binding Source}" FontSize="11" Foreground="{StaticResource AccentBrush}" />
                                                <TextBlock Text=" â†’ " FontSize="11" Foreground="{StaticResource TextDimBrush}" />
                                                <TextBlock Text="{Binding Target}" FontSize="11" Foreground="{StaticResource TextMutedBrush}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Hooks -->
                                <StackPanel
                                    Margin="0,12,0,0"
                                    Visibility="{Binding Detail.Manifest.Hooks, Converter={StaticResource NullToVisibilityConverter}}">
                                    <TextBlock Text="Hooks" FontSize="13" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8" />
                                    <TextBlock FontSize="11" Foreground="{StaticResource TextMutedBrush}">
                                        <Run Text="pre-deploy: " /><Run Text="{Binding Detail.Manifest.Hooks.PreDeploy, Mode=OneWay}" Foreground="{StaticResource AccentBrush}" />
                                    </TextBlock>
                                    <TextBlock FontSize="11" Foreground="{StaticResource TextMutedBrush}">
                                        <Run Text="post-deploy: " /><Run Text="{Binding Detail.Manifest.Hooks.PostDeploy, Mode=OneWay}" Foreground="{StaticResource AccentBrush}" />
                                    </TextBlock>
                                </StackPanel>

                                <!-- Registry entries -->
                                <StackPanel Margin="0,12,0,0">
                                    <StackPanel.Visibility>
                                        <Binding Path="Detail.Manifest.Registry.Length" Converter="{StaticResource CountToVisibilityConverter}" FallbackValue="Collapsed" />
                                    </StackPanel.Visibility>
                                    <TextBlock Text="Registry" FontSize="13" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8" />
                                    <ItemsControl ItemsSource="{Binding Detail.Manifest.Registry}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock FontSize="11" Foreground="{StaticResource TextMutedBrush}" TextWrapping="Wrap" Margin="0,0,0,4">
                                                    <Run Text="{Binding Key, Mode=OneWay}" /><Run Text="\" /><Run Text="{Binding Name, Mode=OneWay}" Foreground="{StaticResource AccentBrush}" />
                                                </TextBlock>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Alternatives section -->
                        <Border
                            Background="{StaticResource CardBackgroundBrush}"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,12"
                            Visibility="{Binding HasAlternatives, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Alternatives" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8" />
                                <ItemsControl ItemsSource="{Binding Detail.Alternatives}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type catalog:CatalogEntry}">
                                            <TextBlock
                                                Text="{Binding Name, Mode=OneWay}"
                                                FontSize="11"
                                                Foreground="{StaticResource TextSubtleBrush}"
                                                Margin="0,0,0,4" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </controls:CardGalleryLayout.DetailContent>
    </controls:CardGalleryLayout>

</Page>

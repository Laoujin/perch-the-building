<UserControl
    x:Class="Perch.Desktop.Views.Controls.DeployBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Visibility="Collapsed">
    <Border
        Background="#16162A"
        BorderBrush="#2A2A3E"
        BorderThickness="0,1,0,0"
        Padding="20,12">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Selected count -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <ui:SymbolIcon Symbol="CheckmarkCircle24" FontSize="16" Foreground="#10B981" />
                <TextBlock Margin="8,0,0,0" VerticalAlignment="Center">
                    <Run
                        Text="{Binding SelectedCount, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        FontWeight="SemiBold"
                        Foreground="White" />
                    <Run Text=" items selected" Foreground="#888888" />
                </TextBlock>
            </StackPanel>

            <!-- Clear button -->
            <ui:Button
                Grid.Column="1"
                Content="Clear"
                Appearance="Secondary"
                Click="OnClearClick"
                Margin="0,0,8,0"
                VerticalAlignment="Center" />

            <!-- Deploy button -->
            <ui:Button
                Grid.Column="2"
                x:Name="DeployButton"
                Appearance="Primary"
                Click="OnDeployClick"
                VerticalAlignment="Center"
                IsEnabled="{Binding IsDeploying, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBooleanConverter}}">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon
                        x:Name="DeployIcon"
                        Symbol="ArrowSync24"
                        FontSize="14"
                        Margin="0,0,6,0" />
                    <TextBlock x:Name="DeployText" Text="Deploy" />
                </StackPanel>
            </ui:Button>
        </Grid>
    </Border>
</UserControl>

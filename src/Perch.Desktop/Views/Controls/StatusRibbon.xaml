<UserControl
    x:Class="Perch.Desktop.Views.Controls.StatusRibbon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="clr-namespace:Perch.Desktop.Models">
    <Border
        x:Name="RibbonBorder"
        Padding="8,2"
        CornerRadius="4"
        HorizontalAlignment="Left">
        <TextBlock
            x:Name="RibbonText"
            FontSize="10"
            FontWeight="SemiBold" />
    </Border>
</UserControl>

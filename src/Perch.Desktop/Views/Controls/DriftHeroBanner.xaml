<UserControl
    x:Class="Perch.Desktop.Views.Controls.DriftHeroBanner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Border
        x:Name="RootBorder"
        CornerRadius="12"
        Padding="24,20"
        Margin="0,0,0,20"
        ClipToBounds="True">
        <Grid>
            <!-- Empty state: wizard CTA with hero background -->
            <Border
                x:Name="EmptyPanel"
                CornerRadius="12"
                MinHeight="180"
                Cursor="Hand"
                MouseLeftButtonUp="OnEmptyPanelClick">
                <Border.Background>
                    <ImageBrush
                        ImageSource="/Assets/hero.png"
                        Stretch="UniformToFill"
                        Opacity="0.35" />
                </Border.Background>
                <StackPanel
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                    <ui:SymbolIcon
                        Symbol="Wand24"
                        FontSize="36"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,12" />
                    <TextBlock
                        Text="Setup Wizard"
                        FontSize="22"
                        FontWeight="SemiBold"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,6" />
                    <TextBlock
                        Text="Configure your dotfiles and apps"
                        FontSize="13"
                        Foreground="#BBBBBB"
                        HorizontalAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- Healthy/Attention state: status + badges + health circle -->
            <Grid x:Name="StatusPanel" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock
                        Text="{Binding StatusMessage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Margin="0,0,0,12" />

                    <StackPanel Orientation="Horizontal">
                        <!-- Apps badge -->
                        <Border
                            Background="#2634D399"
                            CornerRadius="6"
                            Padding="10,6"
                            Margin="0,0,8,0"
                            Visibility="{Binding LinkedAppsCount, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource CountToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Apps24" FontSize="14" Foreground="#34D399" />
                                <TextBlock Margin="6,0,0,0" VerticalAlignment="Center">
                                    <Run
                                        Text="{Binding LinkedAppsCount, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Foreground="#34D399"
                                        FontWeight="SemiBold" />
                                    <Run Text=" apps" Foreground="#888888" />
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Dotfiles badge -->
                        <Border
                            Background="#2634D399"
                            CornerRadius="6"
                            Padding="10,6"
                            Margin="0,0,8,0"
                            Visibility="{Binding LinkedDotfilesCount, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource CountToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="DocumentLink24" FontSize="14" Foreground="#34D399" />
                                <TextBlock Margin="6,0,0,0" VerticalAlignment="Center">
                                    <Run
                                        Text="{Binding LinkedDotfilesCount, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Foreground="#34D399"
                                        FontWeight="SemiBold" />
                                    <Run Text=" dotfiles" Foreground="#888888" />
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Tweaks badge -->
                        <Border
                            Background="#2634D399"
                            CornerRadius="6"
                            Padding="10,6"
                            Margin="0,0,8,0"
                            Visibility="{Binding LinkedTweaksCount, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource CountToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Wrench24" FontSize="14" Foreground="#34D399" />
                                <TextBlock Margin="6,0,0,0" VerticalAlignment="Center">
                                    <Run
                                        Text="{Binding LinkedTweaksCount, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Foreground="#34D399"
                                        FontWeight="SemiBold" />
                                    <Run Text=" tweaks" Foreground="#888888" />
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Attention badge -->
                        <Border
                            Background="#26F59E0B"
                            CornerRadius="6"
                            Padding="10,6"
                            Margin="0,0,8,0"
                            Visibility="{Binding AttentionCount, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource CountToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Warning24" FontSize="14" Foreground="#F59E0B" />
                                <TextBlock Margin="6,0,0,0" VerticalAlignment="Center">
                                    <Run
                                        Text="{Binding AttentionCount, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Foreground="#F59E0B"
                                        FontWeight="SemiBold" />
                                    <Run Text=" attention" Foreground="#888888" />
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Broken badge -->
                        <Border
                            Background="#26EF4444"
                            CornerRadius="6"
                            Padding="10,6"
                            Visibility="{Binding BrokenCount, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource CountToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="DismissCircle24" FontSize="14" Foreground="#EF4444" />
                                <TextBlock Margin="6,0,0,0" VerticalAlignment="Center">
                                    <Run
                                        Text="{Binding BrokenCount, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Foreground="#EF4444"
                                        FontWeight="SemiBold" />
                                    <Run Text=" broken" Foreground="#888888" />
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Health circle -->
                <Border
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Margin="20,0,0,0"
                    Background="#1A1A2E"
                    CornerRadius="40"
                    Width="80"
                    Height="80">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock
                            Text="{Binding HealthPercent, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0}%}"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Foreground="#10B981"
                            HorizontalAlignment="Center" />
                        <TextBlock
                            Text="healthy"
                            FontSize="10"
                            Foreground="#888888"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Wizard button (small) -->
                <ui:Button
                    Grid.Column="2"
                    Content="Setup Wizard"
                    Icon="{ui:SymbolIcon Wand24}"
                    Appearance="Secondary"
                    VerticalAlignment="Center"
                    Margin="12,0,0,0"
                    Click="OnWizardButtonClick" />
            </Grid>
        </Grid>
    </Border>
</UserControl>

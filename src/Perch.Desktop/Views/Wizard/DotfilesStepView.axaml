<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Perch.Desktop.ViewModels.Wizard"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Perch.Desktop.Views.Wizard.DotfilesStepView"
             x:DataType="vm:DotfilesStepViewModel">

    <DockPanel Margin="32">
        <StackPanel DockPanel.Dock="Top" Spacing="8" Margin="0,0,0,16">
            <TextBlock Text="We found these config files on your system"
                       FontSize="24" FontWeight="Bold" />
            <Border Padding="12" CornerRadius="6"
                    Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
                <TextBlock Text="Checked files will be copied into your config repo and replaced with symlinks."
                           TextWrapping="Wrap" Opacity="0.7" />
            </Border>
        </StackPanel>

        <ScrollViewer>
            <ItemsControl ItemsSource="{Binding Items}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="8" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="vm:DotfileItemViewModel">
                        <Border Padding="16,12" CornerRadius="8"
                                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                BorderThickness="1">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}"
                                          VerticalAlignment="Center" Margin="0,0,12,0" />
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding Dotfile.Name}" FontWeight="SemiBold" FontSize="14" />
                                        <Border IsVisible="{Binding Dotfile.IsSymlink}" Padding="6,2" CornerRadius="4"
                                                Background="{DynamicResource SystemAccentColor}">
                                            <TextBlock Text="symlink" FontSize="10" />
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Dotfile.FullPath}"
                                               Opacity="0.5" FontSize="11" TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="{Binding Dotfile.Group}"
                                           Opacity="0.4" FontSize="11" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>

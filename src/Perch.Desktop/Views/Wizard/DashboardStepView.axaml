<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Perch.Desktop.ViewModels.Wizard"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Perch.Desktop.Views.Wizard.DashboardStepView"
             x:DataType="vm:DashboardStepViewModel">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="24" MaxWidth="500">
        <TextBlock Text="Dashboard"
                   FontSize="32" FontWeight="Bold"
                   HorizontalAlignment="Center" />

        <TextBlock Text="{Binding Summary}"
                   TextWrapping="Wrap" TextAlignment="Center"
                   FontSize="14" Opacity="0.7" />

        <TextBlock Text="Your configs are now managed by Perch. Use the CLI for day-to-day operations."
                   TextWrapping="Wrap" TextAlignment="Center"
                   Opacity="0.5" />
    </StackPanel>
</UserControl>

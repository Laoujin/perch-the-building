<ui:FluentWindow
    x:Class="Perch.Desktop.Views.WizardWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:Perch.Desktop.ViewModels.Wizard"
    xmlns:vmBase="clr-namespace:Perch.Desktop.ViewModels"
    xmlns:models="clr-namespace:Perch.Desktop.Models"
    xmlns:controls="clr-namespace:Perch.Desktop.Views.Controls"
    xmlns:deploy="clr-namespace:Perch.Core.Deploy;assembly=Perch.Core"
    d:DataContext="{d:DesignInstance vm:WizardShellViewModel}"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Perch Setup Wizard"
    Icon="/Assets/logo-small-transparant.png"
    Width="1050"
    Height="720"
    MinWidth="800"
    MinHeight="800"
    WindowStartupLocation="CenterScreen"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="Perch Setup" />

        <!-- Step indicator -->
        <Border Grid.Row="1" Padding="24,8">
            <ListBox
                x:Name="StepListBox"
                ItemsSource="{Binding StepNames}"
                SelectedIndex="0"
                SelectionChanged="OnStepSelectionChanged"
                Background="Transparent"
                BorderThickness="0"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="12,6" />
                        <Setter Property="Margin" Value="0,0,4,0" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="Foreground" Value="#666666" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border
                                        x:Name="StepBd"
                                        Background="Transparent"
                                        Padding="{TemplateBinding Padding}"
                                        CornerRadius="4">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="StepBd" Property="Background" Value="#2610B981" />
                                            <Setter Property="Foreground" Value="#10B981" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="StepBd" Property="Background" Value="#1AFFFFFF" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="12" FontWeight="SemiBold" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Step Content -->
        <Grid Grid.Row="2">

            <!-- Crash page -->
            <Grid x:Name="CrashOverlay"
                  Visibility="{Binding HasCrashed, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="24,16">
                    <StackPanel HorizontalAlignment="Center" MaxWidth="600">
                        <Image Source="/Assets/wizard-error.png" Width="180" Height="180" Margin="0,16,0,16"
                               Stretch="Uniform" />
                        <TextBlock FontSize="20" FontWeight="SemiBold" Foreground="#EF4444"
                                   HorizontalAlignment="Center" Text="Something went wrong" />
                        <TextBlock FontSize="13" Foreground="#CCCCCC" TextWrapping="Wrap"
                                   Margin="0,12,0,0" Text="{Binding CrashErrorMessage}" />
                        <Border Background="#1A1A2E" CornerRadius="8" Padding="16" Margin="0,16,0,0">
                            <TextBlock FontSize="10" Foreground="#888888" FontFamily="Consolas"
                                       TextWrapping="Wrap" Text="{Binding CrashStackTrace}" />
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- Step: Profile Selection (always index 0) -->
            <Grid x:Name="ProfileStep">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Welcome hero — full height of hero.png -->
                <Border Grid.Row="0" ClipToBounds="True" Margin="24,8,24,0" CornerRadius="8"
                        MaxHeight="300">
                    <Grid>
                        <Image Source="/Assets/hero.png" Stretch="UniformToFill"
                               VerticalAlignment="Center" HorizontalAlignment="Center" />
                        <Border Background="#88000000" Padding="24,0">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock FontSize="24" FontWeight="SemiBold" Foreground="White"
                                           Text="Welcome to Perch" />
                                <TextBlock FontSize="13" Foreground="#CCFFFFFF" Margin="0,4,0,0"
                                    Text="Select your profile(s), then Perch will scan your system and show what it found." />
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <TextBlock Grid.Row="1" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="24,16,24,8"
                    Text="Choose your profile(s)" />

                <!-- Profile cards — fill available space -->
                <UniformGrid Grid.Row="2" Columns="4" Margin="24,0" VerticalAlignment="Stretch">
                    <controls:ProfileCard
                        ProfileName="Developer"
                        Tagline="Full dotfiles, dev tools, shell configs"
                        HeroImageSource="/Assets/profile-developer.png"
                        IsSelected="{Binding IsDeveloper, Mode=TwoWay}"
                        Margin="0,0,12,12" />

                    <controls:ProfileCard
                        ProfileName="Power User"
                        Tagline="System tweaks, app settings, productivity"
                        HeroImageSource="/Assets/profile-power-user.png"
                        IsSelected="{Binding IsPowerUser, Mode=TwoWay}"
                        Margin="0,0,12,12" />

                    <controls:ProfileCard
                        ProfileName="Gamer"
                        Tagline="Gaming apps, performance tweaks"
                        HeroImageSource="/Assets/profile-gamer.png"
                        IsSelected="{Binding IsGamer, Mode=TwoWay}"
                        Margin="0,0,12,12" />

                    <controls:ProfileCard
                        ProfileName="Casual"
                        Tagline="Simplified experience, apps only"
                        HeroImageSource="/Assets/profile-casual2.png"
                        IsSelected="{Binding IsCasual, Mode=TwoWay}"
                        Margin="0,0,0,12" />
                </UniformGrid>
            </Grid>

            <!-- Step: Config Path Selection -->
            <Grid x:Name="ConfigStep" Margin="24,16">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="550">
                    <ui:SymbolIcon Symbol="FolderOpen24" FontSize="48" Foreground="#10B981" Margin="0,0,0,16"
                                   HorizontalAlignment="Center" />
                    <TextBlock FontSize="20" FontWeight="SemiBold" Foreground="White"
                               HorizontalAlignment="Center" Text="Where is your config?" />
                    <TextBlock FontSize="13" Foreground="#888888" TextWrapping="Wrap" TextAlignment="Center"
                               Margin="0,8,0,24"
                               Text="Point to the location where you want to save your configuration." />

                    <!-- Select a folder -->
                    <Border Background="#1A1A2E" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" FontSize="13" FontWeight="SemiBold" Foreground="White"
                                       Text="Select a folder" Margin="0,0,0,8" />
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0"
                                    PlaceholderText="e.g. C:\Users\you\perch-config"
                                    Text="{Binding ConfigRepoPath, UpdateSourceTrigger=PropertyChanged}" />
                                <ui:Button Grid.Column="1" Content="Browse" Margin="8,0,0,0"
                                    Command="{Binding BrowseConfigRepoCommand}" />
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Git repo status -->
                    <Border Background="#261EAA54" CornerRadius="6" Padding="12,8" Margin="0,0,0,8"
                            Visibility="{Binding ConfigIsGitRepo, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="CheckmarkCircle24" FontSize="16" Foreground="#34D399" />
                            <TextBlock FontSize="12" Foreground="#34D399" Margin="8,0,0,0"
                                       VerticalAlignment="Center" Text="This is a git repository. Good to go!" />
                        </StackPanel>
                    </Border>

                    <Border Background="#26F59E0B" CornerRadius="6" Padding="12,8" Margin="0,0,0,8"
                            Visibility="{Binding ConfigPathNotGitWarning, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Warning24" FontSize="16" Foreground="#F59E0B" />
                                <TextBlock FontSize="12" Foreground="#F59E0B" Margin="8,0,0,0"
                                           VerticalAlignment="Center" FontWeight="SemiBold"
                                           Text="This is not a git repository" />
                            </StackPanel>
                            <TextBlock FontSize="11" Foreground="#CCCCCC" Margin="24,4,0,0" TextWrapping="Wrap"
                                       Text="Consider backing up your config folder by putting it on a cloud drive (Dropbox, OneDrive, Google Drive) or initializing a git repo." />
                        </StackPanel>
                    </Border>

                    <Border Background="#263B82F6" CornerRadius="6" Padding="12,8" Margin="0,0,0,8"
                            Visibility="{Binding ConfigPathNotExistWarning, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Info24" FontSize="16" Foreground="#3B82F6" />
                            <TextBlock FontSize="12" Foreground="#3B82F6" Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Text="This folder does not exist yet. Perch will create it." />
                        </StackPanel>
                    </Border>

                    <!-- Clone option -->
                    <Border Background="#1A1A2E" CornerRadius="8" Padding="16" Margin="0,12,0,0">
                        <StackPanel>
                            <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="White"
                                       Text="Clone a repository" Margin="0,0,0,8" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0"
                                    PlaceholderText="https://github.com/you/perch-config.git"
                                    Text="{Binding CloneUrl, UpdateSourceTrigger=PropertyChanged}" />
                                <ui:Button Grid.Column="1" Content="Clone" Margin="8,0,0,0"
                                    Command="{Binding CloneConfigRepoCommand}"
                                    IsEnabled="{Binding IsCloning, Converter={StaticResource InverseBooleanConverter}}" />
                            </Grid>
                            <ui:ProgressRing IsIndeterminate="True" Width="20" Height="20" Margin="0,8,0,0"
                                HorizontalAlignment="Left"
                                Visibility="{Binding IsCloning, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Dotfiles Step -->
            <Grid x:Name="DotfilesStep" Margin="24,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" FontSize="20" FontWeight="SemiBold" Foreground="White" Text="Dotfiles &amp; Config" />
                <TextBlock Grid.Row="1" FontSize="13" Foreground="#888888" Margin="0,4,0,16"
                    Text="Detected dotfiles on your system. Toggle which ones Perch should manage via symlinks." />

                <!-- Loading -->
                <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="{Binding IsLoadingDetection, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ui:ProgressRing IsIndeterminate="True" Width="32" Height="32" Margin="0,0,0,8" />
                    <TextBlock FontSize="11" Foreground="#888888" Text="Scanning your system..." HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Dotfile cards -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding IsLoadingDetection, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <ItemsControl ItemsSource="{Binding Dotfiles}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:DotfileCardModel}">
                                <Border
                                    Background="#1A1A2E"
                                    BorderBrush="{Binding IsSelected, Converter={StaticResource BooleanToBorderBrushConverter}}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="12"
                                    Width="240"
                                    Margin="0,0,12,12">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <controls:StatusRibbon
                                            Grid.Row="0"
                                            Status="{Binding Status}"
                                            Margin="0,0,0,8" />

                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <ui:SymbolIcon
                                                Grid.Column="0"
                                                Symbol="Document24"
                                                FontSize="20"
                                                Foreground="#888888"
                                                VerticalAlignment="Center"
                                                Margin="0,0,8,0" />

                                            <TextBlock
                                                Grid.Column="1"
                                                Text="{Binding Name}"
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                VerticalAlignment="Center"
                                                TextTrimming="CharacterEllipsis" />

                                            <ui:ToggleSwitch
                                                Grid.Column="2"
                                                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                VerticalAlignment="Center" />
                                        </Grid>

                                        <TextBlock
                                            Grid.Row="2"
                                            Text="{Binding Group}"
                                            FontSize="11"
                                            Foreground="#888888"
                                            Margin="0,4,0,0"
                                            Visibility="{Binding Group, Converter={StaticResource CountToVisibilityConverter}}" />

                                        <TextBlock
                                            Grid.Row="3"
                                            Text="{Binding FullPath}"
                                            FontSize="10"
                                            Foreground="#666666"
                                            TextTrimming="CharacterEllipsis"
                                            Margin="0,4,0,0" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Apps Step (category drill-in) -->
            <Grid x:Name="AppsStep" Margin="24,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" FontSize="20" FontWeight="SemiBold" Foreground="White" Text="Applications" />
                <TextBlock Grid.Row="1" FontSize="13" Foreground="#888888" Margin="0,4,0,16"
                    Text="Apps detected on your system, plus suggestions based on your profile. Click a category to see apps." />

                <!-- Category grid -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding ShowAppCategories, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ItemsControl ItemsSource="{Binding AppCategories}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate><WrapPanel /></ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:AppCategoryCardModel}">
                                <Border
                                    Background="#1A1A2E"
                                    BorderBrush="#333350"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Width="200"
                                    Margin="0,0,12,12"
                                    Cursor="Hand"
                                    MouseLeftButtonUp="OnAppCategoryCardClick">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <ui:SymbolIcon
                                            Grid.Row="0"
                                            Symbol="{Binding IconSymbol}"
                                            FontSize="28"
                                            Foreground="#10B981"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,0,8" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Text="{Binding DisplayName}"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="White" />

                                        <TextBlock
                                            Grid.Row="2"
                                            FontSize="11"
                                            Foreground="#888888"
                                            Margin="0,4,0,0">
                                            <Run Text="{Binding ItemCount, Mode=OneWay}" />
                                            <Run Text=" apps" />
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Detail view (drill-in) -->
                <Grid Grid.Row="2"
                      Visibility="{Binding ShowAppDetail, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <ui:Button
                            Icon="{ui:SymbolIcon ArrowLeft24}"
                            Command="{Binding BackToAppCategoriesCommand}"
                            Margin="0,0,12,0" />
                        <TextBlock
                            Text="{Binding SelectedAppCategory}"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Foreground="White"
                            VerticalAlignment="Center" />
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding FilteredAppsByCategory}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type vmBase:AppCategoryGroup}">
                                    <StackPanel>
                                        <controls:TierSectionHeader
                                            Title="{Binding Category}"
                                            ItemCount="{Binding Apps.Count}" />
                                        <ItemsControl ItemsSource="{Binding Apps}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate><WrapPanel /></ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="{x:Type models:AppCardModel}">
                                                    <controls:AppCard
                                                        DisplayLabel="{Binding DisplayLabel}"
                                                        Description="{Binding Description}"
                                                        Category="{Binding Category}"
                                                        Status="{Binding Status}"
                                                        IsSelected="{Binding IsSelected, Mode=TwoWay}"
                                                        Margin="0,0,12,12" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>

            <!-- System Tweaks Step (category drill-in) -->
            <Grid x:Name="TweaksStep" Margin="24,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" FontSize="20" FontWeight="SemiBold" Foreground="White" Text="System Tweaks" />
                <TextBlock Grid.Row="1" FontSize="13" Foreground="#888888" Margin="0,4,0,16"
                    Text="Registry tweaks and fonts matched to your profile. Click a category to see items." />

                <!-- Category grid -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding ShowTweakCategories, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ItemsControl ItemsSource="{Binding TweakCategories}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate><WrapPanel /></ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:TweakCategoryCardModel}">
                                <Border
                                    Background="#1A1A2E"
                                    BorderBrush="#333350"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Width="200"
                                    Margin="0,0,12,12"
                                    Cursor="Hand"
                                    MouseLeftButtonUp="OnTweakCategoryCardClick">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <ui:SymbolIcon
                                            Grid.Row="0"
                                            Symbol="{Binding IconSymbol}"
                                            FontSize="28"
                                            Foreground="#10B981"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,0,8" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Text="{Binding DisplayName}"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="White" />

                                        <TextBlock
                                            Grid.Row="2"
                                            FontSize="11"
                                            Foreground="#888888"
                                            Margin="0,4,0,0">
                                            <Run Text="{Binding ItemCount, Mode=OneWay}" />
                                            <Run Text=" items" />
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Detail view (drill-in) -->
                <Grid Grid.Row="2"
                      Visibility="{Binding ShowTweakDetail, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <ui:Button
                            Icon="{ui:SymbolIcon ArrowLeft24}"
                            Command="{Binding BackToTweakCategoriesCommand}"
                            Margin="0,0,12,0" />
                        <TextBlock
                            Text="{Binding SelectedTweakCategory}"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Foreground="White"
                            VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Tweak cards (non-Fonts) -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                  x:Name="WizardTweakDetailPanel">
                        <ItemsControl ItemsSource="{Binding FilteredTweaks}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate><WrapPanel /></ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:TweakCardModel}">
                                    <Border
                                        Background="#1A1A2E"
                                        BorderBrush="{Binding IsSelected, Converter={StaticResource BooleanToBorderBrushConverter}}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="12"
                                        MinWidth="220"
                                        Margin="0,0,12,12">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="13" FontWeight="SemiBold"
                                                           Foreground="White" TextTrimming="CharacterEllipsis" />
                                                <ui:ToggleSwitch Grid.Column="1" IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                            </Grid>

                                            <TextBlock Grid.Row="1" Text="{Binding Description}" FontSize="11" Foreground="#888888"
                                                       TextWrapping="Wrap" MaxHeight="32" Margin="0,4,0,0" />

                                            <TextBlock Grid.Row="2" FontSize="10" Foreground="#666666" Margin="0,4,0,0">
                                                <Run Text="{Binding TotalCount, Mode=OneWay}" />
                                                <Run Text=" registry entries" />
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Font cards (Fonts category) -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                  x:Name="WizardFontDetailPanel">
                        <StackPanel>
                            <!-- Detected Fonts -->
                            <StackPanel Visibility="{Binding DetectedFonts.Count, Converter={StaticResource CountToVisibilityConverter}, FallbackValue=Collapsed}">
                                <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="#888888" Margin="0,0,0,8"
                                           Text="Detected on your system" />
                                <ItemsControl ItemsSource="{Binding DetectedFonts}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate><WrapPanel /></ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:FontCardModel}">
                                            <Border
                                                Background="#1A1A2E"
                                                BorderBrush="{Binding IsSelected, Converter={StaticResource BooleanToBorderBrushConverter}}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Padding="12"
                                                Width="240"
                                                Margin="0,0,12,12">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <Grid Grid.Row="0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock
                                                            Grid.Column="0"
                                                            Text="{Binding Name}"
                                                            FontFamily="{Binding Name}"
                                                            FontSize="13"
                                                            FontWeight="SemiBold"
                                                            Foreground="White"
                                                            TextTrimming="CharacterEllipsis"
                                                            ToolTip="{Binding Name}"
                                                            VerticalAlignment="Center" />

                                                        <ui:ToggleSwitch
                                                            Grid.Column="1"
                                                            IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                            VerticalAlignment="Center" />
                                                    </Grid>

                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Text="{Binding Description}"
                                                        FontSize="11"
                                                        Foreground="#888888"
                                                        TextTrimming="CharacterEllipsis"
                                                        Margin="0,4,0,0"
                                                        Visibility="{Binding Description, Converter={StaticResource CountToVisibilityConverter}}" />

                                                    <ui:Button
                                                        Grid.Row="2"
                                                        Icon="{ui:SymbolIcon Eye24}"
                                                        Command="{Binding PreviewCommand}"
                                                        ToolTip="View Font"
                                                        Padding="4"
                                                        Margin="0,4,0,0"
                                                        HorizontalAlignment="Right"
                                                        Visibility="{Binding FullPath, Converter={StaticResource CountToVisibilityConverter}}" />
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Gallery Fonts -->
                            <StackPanel Visibility="{Binding GalleryFonts.Count, Converter={StaticResource CountToVisibilityConverter}, FallbackValue=Collapsed}"
                                        Margin="0,16,0,0">
                                <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="#888888" Margin="0,0,0,8"
                                           Text="Available from gallery" />
                                <ItemsControl ItemsSource="{Binding GalleryFonts}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate><WrapPanel /></ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:FontCardModel}">
                                            <Border
                                                Background="#1A1A2E"
                                                BorderBrush="{Binding IsSelected, Converter={StaticResource BooleanToBorderBrushConverter}}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Padding="12"
                                                Width="240"
                                                Margin="0,0,12,12">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <Grid Grid.Row="0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock
                                                            Grid.Column="0"
                                                            Text="{Binding Name}"
                                                            FontFamily="{Binding Name}"
                                                            FontSize="13"
                                                            FontWeight="SemiBold"
                                                            Foreground="White"
                                                            TextTrimming="CharacterEllipsis"
                                                            ToolTip="{Binding Name}"
                                                            VerticalAlignment="Center" />

                                                        <ui:ToggleSwitch
                                                            Grid.Column="1"
                                                            IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                            VerticalAlignment="Center" />
                                                    </Grid>

                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Text="{Binding Description}"
                                                        FontSize="11"
                                                        Foreground="#888888"
                                                        TextWrapping="Wrap"
                                                        MaxHeight="32"
                                                        Margin="0,4,0,0" />
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>

            <!-- Review Step -->
            <Grid x:Name="ReviewStep" Margin="24,16">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="500">
                    <Grid>
                        <Image Source="/Assets/wizard-empty.png" Stretch="Uniform" />
                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,24">
                            <TextBlock FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="White"
                                       Text="Ready to deploy" />
                        </StackPanel>
                    </Grid>

                    <!-- Summary counts -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                        <Border Background="#2634D399" CornerRadius="6" Padding="12,6" Margin="0,0,8,0"
                                Visibility="{Binding SelectedDotfileCount, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock FontSize="11" Foreground="#34D399">
                                <Run Text="{Binding SelectedDotfileCount, Mode=OneWay}" FontWeight="SemiBold" />
                                <Run Text=" dotfiles" />
                            </TextBlock>
                        </Border>
                        <Border Background="#2610B981" CornerRadius="6" Padding="12,6" Margin="0,0,8,0"
                                Visibility="{Binding SelectedAppCount, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock FontSize="11" Foreground="#10B981">
                                <Run Text="{Binding SelectedAppCount, Mode=OneWay}" FontWeight="SemiBold" />
                                <Run Text=" apps" />
                            </TextBlock>
                        </Border>
                        <Border Background="#26F59E0B" CornerRadius="6" Padding="12,6" Margin="0,0,8,0"
                                Visibility="{Binding SelectedTweakCount, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock FontSize="11" Foreground="#F59E0B">
                                <Run Text="{Binding SelectedTweakCount, Mode=OneWay}" FontWeight="SemiBold" />
                                <Run Text=" tweaks" />
                            </TextBlock>
                        </Border>
                        <Border Background="#268B5CF6" CornerRadius="6" Padding="12,6"
                                Visibility="{Binding SelectedFontCount, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock FontSize="11" Foreground="#8B5CF6">
                                <Run Text="{Binding SelectedFontCount, Mode=OneWay}" FontWeight="SemiBold" />
                                <Run Text=" fonts" />
                            </TextBlock>
                        </Border>
                    </StackPanel>

                    <TextBlock FontSize="13" Foreground="#888888" HorizontalAlignment="Center" Margin="0,16,0,0"
                               TextWrapping="Wrap" TextAlignment="Center"
                               Text="Perch will create symlinks for config files and apply registry tweaks. Existing files will be backed up." />
                </StackPanel>
            </Grid>

            <!-- Deploy Results Step -->
            <Grid x:Name="DeployStep" Margin="24,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Completion images -->
                <Grid Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,16"
                      Visibility="{Binding IsComplete, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Image Source="/Assets/wizard-success.png" Width="160" Height="160"
                           Visibility="{Binding HasErrors, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                    <Image Source="/Assets/wizard-error.png" Width="160" Height="160"
                           Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </Grid>

                <!-- Progress -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                    <ui:ProgressRing IsIndeterminate="True" Width="32" Height="32" Margin="0,0,0,8"
                        Visibility="{Binding IsDeploying, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBlock FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center"
                               Foreground="White" Text="{Binding DeployStatusMessage}" />
                    <TextBlock FontSize="11" Foreground="#888888" HorizontalAlignment="Center" Margin="0,4,0,0">
                        <Run Text="{Binding DeployedCount, Mode=OneWay}" />
                        <Run Text=" deployed, " />
                        <Run Text="{Binding ErrorCount, Mode=OneWay}" />
                        <Run Text=" errors" />
                    </TextBlock>
                </StackPanel>

                <!-- Deploy results list -->
                <ScrollViewer Grid.Row="2" Margin="0,16,0,0" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding DeployResults}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:DeployResultItemViewModel}">
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <ui:SymbolIcon Grid.Column="0" Margin="0,0,8,0">
                                        <ui:SymbolIcon.Style>
                                            <Style TargetType="ui:SymbolIcon">
                                                <Setter Property="Symbol" Value="CheckmarkCircle24" />
                                                <Setter Property="Foreground" Value="#34D399" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Level}" Value="{x:Static deploy:ResultLevel.Error}">
                                                        <Setter Property="Symbol" Value="ErrorCircle24" />
                                                        <Setter Property="Foreground" Value="#EF4444" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Level}" Value="{x:Static deploy:ResultLevel.Warning}">
                                                        <Setter Property="Symbol" Value="Warning24" />
                                                        <Setter Property="Foreground" Value="#F59E0B" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ui:SymbolIcon.Style>
                                    </ui:SymbolIcon>
                                    <TextBlock Grid.Column="1" FontSize="11" Text="{Binding ModuleName}" Margin="0,0,8,0" Foreground="White" />
                                    <TextBlock Grid.Column="2" FontSize="11" Foreground="#888888" Text="{Binding Message}" TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Footer navigation -->
        <Border Grid.Row="3" Padding="24,12" Background="#16162A">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Nav buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Content="Back" Command="{Binding GoBackCommand}" Margin="0,0,8,0"
                        Visibility="{Binding CanGoBack, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <ui:Button Content="Next" Appearance="Primary" Command="{Binding GoNextCommand}"
                        Visibility="{Binding CanGoNext, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <ui:Button Content="Deploy" Appearance="Primary" Command="{Binding DeployCommand}"
                        Visibility="{Binding ShowDeploy, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <ui:Button Content="Open Dashboard" Appearance="Primary" Click="OnOpenDashboard"
                        Visibility="{Binding IsComplete, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</ui:FluentWindow>
